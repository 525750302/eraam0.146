;-------------------------------------------------
;その名の通り、VARSETする関数を突っ込むファイル
;ドッペルあなたを用いる時は慎重に
;-------------------------------------------------

;-------------------------------------------------
;@IS_ABLUPの計算でドッペルあなたのパラメーターを必要値の判定に用いる
;-------------------------------------------------
@VARSET_ABLUP
;JUELの20番までを初期化
VARSET JUEL:0:0, 0, 0, 20

;-------------------------------------------------
;@COMFでのソースの計算でドッペルあなたのパラメーターを必要値の判定に用いる
;-------------------------------------------------
@VARSET_COMF
;SOURCEの29番までを初期化
VARSET SOURCE:0:0, 0, 0, 30
;DOWNBASEの9番までを初期化
VARSET DOWNBASE:0:0, 0, 0, 10

;-------------------------------------------------
;@SOURCE_NOTCVABMでのCUPの計算でドッペルあなたのパラメーターを必要値の判定に用いる
;-------------------------------------------------
@VARSET_NOTCVABM
;CUPの29番までを初期化
VARSET CUP:0:0, 0, 0, 30

;-------------------------------------------------
;@PROFILEでのCALL EVENT_PROFILE, "勧誘"内でのCFLAG,BASE,TALENT,ABL,EXP,CSTRの変更にドッペルあなたのパラメーターを用いる
;-------------------------------------------------
@VARSET_PROFILE
VARSET CFLAG:0:0, -1
VARSET BASE:0:0, -1
VARSET TALENT:0:0, -1
VARSET ABL:0:0, -1
VARSET EXP:0:0, -1
VARSET CSTR:0:0, "-1"

@VARSET_MAIDFACE, ARG
;顔グラ設定がないキャラ用関数を呼ぶ
CALL PRESET_MAIDFACE, ARG

;髪と表情の各パラについて空文字だった場合にはデフォ値を代入する
SIF CSTR:ARG:髪色 == ""
	CSTR:ARG:髪色 = 黒髪
SIF CSTR:ARG:髪長 == ""
	CSTR:ARG:髪長 = %CONDS("髪長", ARG)%
SIF CSTR:ARG:前髪 == ""
	CSTR:ARG:前髪 = 自然刘海
SIF CSTR:ARG:後髪 == ""
	CSTR:ARG:後髪 = 自然
SIF CSTR:ARG:改髪 == ""
	CSTR:ARG:改髪 = 无特殊髪型
SIF CSTR:ARG:呆毛 == ""
	CSTR:ARG:呆毛 = 无呆毛
SIF CSTR:ARG:蝴蝶結 == ""
	CSTR:ARG:蝴蝶結 = 无蝴蝶結

SIF CSTR:ARG:瞳色 == ""
	CSTR:ARG:瞳色 = %CONDS("右瞳色", ARG)%
SIF CSTR:ARG:眼形 == ""
	CSTR:ARG:眼形 = %CONDS("右眼形", ARG)%
SIF CSTR:ARG:白眼 == ""
	CSTR:ARG:白眼 = %CONDS("右白眼", ARG)%
SIF CSTR:ARG:眉形 == ""
	CSTR:ARG:眉形 = %CONDS("眉形", ARG)%
SIF CSTR:ARG:嘴形 == ""
	CSTR:ARG:嘴形 = %CONDS("嘴形", ARG)%

SIF CSTR:ARG:種族 == ""
	CSTR:ARG:種族 = 人类
SIF ARG != MASTER
	CFLAG:ARG:颜绘 = 1
