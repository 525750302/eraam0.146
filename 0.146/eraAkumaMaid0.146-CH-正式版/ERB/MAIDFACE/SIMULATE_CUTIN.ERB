	IF EQUIP:ARG:贴身制服
		CALL PRINT_STR, @"　　種類:%TEXT_LJ(BODYS(ARG, "CIP種類"), 17)%"
	ELSEIF EQUIP:ARG:外套
		CALL PRINT_STR, @"　　種類:%TEXT_LJ(OUTER(ARG, "CIP種類"), 17)%"
	ELSE
		CALL PRINT_STR, @"　　種類:%TEXT_LJ(PANTIES(ARG, "CIP正面"), 17)%"
	ENDIF
