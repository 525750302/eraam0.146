		CALL SET_SHIRT, "Ｔ恤"
		CALL SET_OUTER, "热褲"
		CALL SET_SHOES, "凉鞋"
	CASEELSE
		IF RAND:2
			CALL SET_SHIRT, "后背蝴蝶結切驳服"
			CALL SET_SKIRT, "裙"
			CALL SET_SHOES, "无后跟鞋"
