;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K52, ARGS

SELECTCASE ARGS
;キャラクター独自の下着の組み合わせを設定できます。設定必須です。一定の確率で着用します。
;もしも普段は付けない、という事ならCSTR:パンツ = と等号の右側を書き込まない事で出来ます。
CASE "内衣"

	IF CFLAG:エッチな内衣着用 == 1
		IF RAND:11 == 0
			CSTR:胖次 = Ｔ字褲/Ｈ的颜色/
		ELSEIF RAND:10 == 0
			CSTR:胖次 = Ｔ字褲/Ｈ的颜色/紐/
		ELSEIF RAND:9 == 0
			CSTR:胖次 = Ｔ字褲/Ｈ的颜色/Ｔ字褲/Micro/
		ELSEIF RAND:8 == 0
			CSTR:胖次 = Micro內褲/Ｈ的颜色/Ｔ字褲/Micro/
		ELSEIF RAND:7 == 0
			CSTR:胖次 = 蕾丝的胖次/Ｈ的颜色/Ｔ字褲/透明/
		ELSEIF RAND:6 == 0
			CSTR:胖次 = 蕾丝的胖次/Ｈ的颜色/Ｔ字褲/透明/Micro/
		ELSEIF RAND:5 == 0
			CSTR:胖次 = 蕾丝的胖次/Ｈ的颜色/Ｔ字褲/透明/紐/
		ELSEIF RAND:4 == 0
			CSTR:胖次 = 繩系胖次/Ｈ的颜色/Ｔ字褲/
		ELSEIF RAND:3 == 0
			CSTR:胖次 = 繩系胖次/Ｈ的颜色/Ｔ字褲/透明/
		ELSEIF RAND:2 == 0
			CSTR:胖次 = 繩系胖次/Ｈ的颜色/Ｔ字褲/Micro/
		ENDIF
		IF RAND:3 == 0
			CSTR:胸罩 = ３／４杯胸罩/Ｈ的颜色/
		ELSEIF RAND:2 == 0
			CSTR:胸罩 = 半杯胸罩/Ｈ的颜色/
		ELSE
			CSTR:胸罩 = 蕾丝胸罩/Ｈ的颜色/透明/
		ENDIF
	ELSE
		CSTR:胖次 = 內褲/Ｈ的颜色/简约/
		CSTR:胸罩 = 简约胸罩/Ｈ的颜色/
	ENDIF


;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "飾品"
	CALL SET_OTHER, "眼鏡"

;学園での普段着です。設定必須です。
;セーラー服, ミニスカセーラー服, ブレザー, ミニスカブレザー, アメスクなど
CASE "制服"
	IF RAND:2 == 0
		CALL SET_COSTUME, "蝴蝶結領帯丝巾女式衬衫"
	ELSE
		IF COND("夏")
			CALL SET_SHIRT, "无袖女式衬衫"
		ELSE
			CALL SET_SHIRT, "宽松女式衬衫"
		ENDIF
		CALL SET_SKIRT, "紧身裙"
		IF COND("秋") || COND("冬")
			CALL SET_OUTER, "连褲襪"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "長筒襪"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "网纹長筒襪"
			ELSE
				CALL SET_SOCKS, "吊帯長筒襪"
			ENDIF
		ENDIF
		CALL SET_SHOES, "高跟鞋"
		IF RAND:2 == 0
			CALL SET_OTHER, "蝴蝶結領帯丝巾"
		ELSE
			CALL SET_OTHER, "褶边領帯"
		ENDIF
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;体操服ブルマ, 体操服ハイレグブルマ, 体操服ハーフパンツ, 体操服スパッツ, 体操服ジャージなど
CASE "体操服"
	IF RAND:2 == 0
		CALL SET_COSTUME, "蝴蝶結領帯丝巾女式衬衫"
	ELSE
		IF COND("夏")
			CALL SET_SHIRT, "无袖女式衬衫"
		ELSE
			CALL SET_SHIRT, "宽松女式衬衫"
		ENDIF
		CALL SET_SKIRT, "紧身裙"
		IF COND("秋") || COND("冬")
			CALL SET_OUTER, "连褲襪"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "長筒襪"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "网纹長筒襪"
			ELSE
				CALL SET_SOCKS, "吊帯長筒襪"
			ENDIF
		ENDIF
		CALL SET_SHOES, "高跟鞋"
		IF RAND:2 == 0
			CALL SET_OTHER, "蝴蝶結領帯丝巾"
		ELSE
			CALL SET_OTHER, "褶边領帯"
		ENDIF
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;スク水, 競泳水着, 白ビキニ, 黒ビキニなど
CASE "泳装"
	IF RAND:2 == 0
		CALL SET_COSTUME, "蝴蝶結領帯丝巾女式衬衫"
	ELSE
		IF COND("夏")
			CALL SET_SHIRT, "无袖女式衬衫"
		ELSE
			CALL SET_SHIRT, "宽松女式衬衫"
		ENDIF
		CALL SET_SKIRT, "紧身裙"
		IF COND("秋") || COND("冬")
			CALL SET_OUTER, "连褲襪"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "長筒襪"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "网纹長筒襪"
			ELSE
				CALL SET_SOCKS, "吊帯長筒襪"
			ENDIF
		ENDIF
		CALL SET_SHOES, "高跟鞋"
		IF RAND:2 == 0
			CALL SET_OTHER, "蝴蝶結領帯丝巾"
		ELSE
			CALL SET_OTHER, "褶边領帯"
		ENDIF
	ENDIF

;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF RAND:2 == 0
		CALL SET_COSTUME, "蝴蝶結領帯丝巾女式衬衫"
	ELSE
		IF COND("夏")
			CALL SET_SHIRT, "无袖女式衬衫"
		ELSE
			CALL SET_SHIRT, "宽松女式衬衫"
		ENDIF
		CALL SET_SKIRT, "紧身裙"
		IF COND("秋") || COND("冬")
			CALL SET_OUTER, "连褲襪"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "長筒襪"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "网纹長筒襪"
			ELSE
				CALL SET_SOCKS, "吊帯長筒襪"
			ENDIF
		ENDIF
		CALL SET_SHOES, "高跟鞋"
		IF RAND:2 == 0
			CALL SET_OTHER, "蝴蝶結領帯丝巾"
		ELSE
			CALL SET_OTHER, "褶边領帯"
		ENDIF
	ENDIF
;自分の部屋(notあなたの部屋)で着ます
CASE "居家服"
	IF COND("春") || COND("夏") || COND("秋")
		IF RAND:2 == 0
			CALL SET_SHIRT, "后背蝴蝶結切驳服"
		ELSE
			CALL SET_SHIRT, "切驳服"
		ENDIF
	ELSEIF COND("冬")
		IF RAND:2 == 0
			CALL SET_SHIRT, "二ット毛衣"
		ELSE
			CALL SET_SHIRT, "萌袖毛衣"
		ENDIF
	ENDIF
	CALL SET_SKIRT, "迷你裙"
	IF COND("秋") || COND("冬")
		CALL SET_OUTER, "连褲襪"
	ELSE
		CALL SET_SOCKS, "長筒襪"
	ENDIF
	IF COND("冬")
		IF RAND:2 == 0
			CALL SET_SHOES, "長靴"
		ELSE
			CALL SET_SHOES, "短筒女靴"
		ENDIF
	ELSE
		IF RAND:4 == 0
			CALL SET_SHOES, "平底鞋"
		ELSEIF RAND:3 == 0
			CALL SET_SHOES, "无后跟鞋"
		ELSEIF RAND:2 == 0
			CALL SET_SHOES, "凉鞋"
		ELSE
			CALL SET_SHOES, "高跟鞋"
		ENDIF
	ENDIF
;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"
	IF COND("夜") || TEXTS("曜日") == "土" || TEXTS("曜日") == "日"
		IF COND("春") || COND("夏") || COND("秋")
			IF COND("夏") && RAND:3 == 0
				CALL SET_SHIRT, "夏日礼服"
			ELSEIF RAND:2 == 0
				CALL SET_SHIRT, "后背蝴蝶結切驳服"
			ELSE
				CALL SET_SHIRT, "切驳服"
			ENDIF
		ELSEIF COND("冬")
			IF RAND:3 == 0
				CALL SET_SHIRT, "蝴蝶結露肩外衣"
			ELSEIF RAND:3 == 0
				CALL SET_SHIRT, "二ットオフショル"
			ENDIF
		ENDIF
		CALL SET_SKIRT, "迷你裙"
		IF COND("秋") || COND("冬")
			CALL SET_OUTER, "连褲襪"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "長筒襪"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "及膝襪"
			ELSE
				CALL SET_SOCKS, "高筒襪"
			ENDIF
		ENDIF
		IF COND("冬")
			IF RAND:2 == 0
				CALL SET_SHOES, "長靴"
			ELSE
				CALL SET_SHOES, "短筒女靴"
			ENDIF
		ELSE
			IF RAND:3 == 0
				CALL SET_SHOES, "平底鞋"
			ELSEIF RAND:2 == 0
				CALL SET_SHOES, "无后跟鞋"
			ELSE
				CALL SET_SHOES, "高跟鞋"
			ENDIF
		ENDIF
		IF COND("冬")
			CALL SET_OTHER, "风衣外套"
		ENDIF
	ELSEIF RAND:2 == 0
		CALL SET_COSTUME, "蝴蝶結領帯丝巾女式衬衫"
		IF COND("冬")
			CALL SET_SHOES, "短筒女靴"
		ELSE
			CALL SET_SHOES, "高跟鞋"
		ENDIF
		IF COND("冬")
			CALL SET_OTHER, "风衣外套"
		ENDIF
	ELSE
		IF COND("夏")
			CALL SET_SHIRT, "无袖女式衬衫"
		ELSE
			CALL SET_SHIRT, "宽松女式衬衫"
		ENDIF
		CALL SET_SKIRT, "紧身裙"
		IF COND("秋") || COND("冬")
			CALL SET_OUTER, "连褲襪"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "長筒襪"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "网纹長筒襪"
			ELSE
				CALL SET_SOCKS, "吊帯長筒襪"
			ENDIF
		ENDIF
		IF COND("冬")
			CALL SET_SHOES, "短筒女靴"
		ELSE
			CALL SET_SHOES, "高跟鞋"
		ENDIF
		IF RAND:2 == 0
			CALL SET_OTHER, "蝴蝶結領帯丝巾"
		ELSE
			CALL SET_OTHER, "褶边領帯"
		ENDIF
		IF COND("冬")
			CALL SET_OTHER, "风衣外套"
		ENDIF
	ENDIF
	IF RAND:2 == 0 && TALENT:淫乱
		IF RAND:2 == 0
			CSTR:胸罩 = １／４杯胸罩/Ｈ的颜色/乳頭露出/乳房露出/
		ELSE
			CSTR:胸罩 = 開放型胸罩/Ｈ的颜色/乳頭露出/
		ENDIF
	ELSE
		IF RAND:3 == 0
			CSTR:胸罩 = ３／４杯胸罩/Ｈ的颜色/
		ELSEIF RAND:2 == 0
			CSTR:胸罩 = 半杯胸罩/Ｈ的颜色/
		ELSE
			CSTR:胸罩 = 蕾丝胸罩/Ｈ的颜色/透明/
		ENDIF
	ENDIF
	IF RAND:11 == 0
		CSTR:胖次 = Ｔ字褲/Ｈ的颜色/
	ELSEIF RAND:10 == 0
		CSTR:胖次 = Ｔ字褲/Ｈ的颜色/紐/
	ELSEIF RAND:9 == 0
		CSTR:胖次 = Ｔ字褲/Ｈ的颜色/Ｔ字褲/Micro/
	ELSEIF RAND:8 == 0
		CSTR:胖次 = Micro內褲/Ｈ的颜色/Ｔ字褲/Micro/
	ELSEIF RAND:7 == 0
		CSTR:胖次 = 蕾丝的胖次/Ｈ的颜色/Ｔ字褲/透明/
	ELSEIF RAND:6 == 0
		CSTR:胖次 = 蕾丝的胖次/Ｈ的颜色/Ｔ字褲/透明/Micro/
	ELSEIF RAND:5 == 0
		CSTR:胖次 = 蕾丝的胖次/Ｈ的颜色/Ｔ字褲/透明/紐/
	ELSEIF RAND:4 == 0
		CSTR:胖次 = 繩系胖次/Ｈ的颜色/Ｔ字褲/
	ELSEIF RAND:3 == 0
		CSTR:胖次 = 繩系胖次/Ｈ的颜色/Ｔ字褲/透明/
	ELSEIF RAND:2 == 0
		CSTR:胖次 = 繩系胖次/Ｈ的颜色/Ｔ字褲/Micro/
	ENDIF

;もちろんデートの際に着ます
CASE "约会衣装"
	IF COND("春") || COND("夏") || COND("秋")
		IF COND("夏") && RAND:3 == 0
				CALL SET_SHIRT, "夏日礼服"
		ELSEIF RAND:2 == 0
			CALL SET_SHIRT, "后背蝴蝶結切驳服"
		ELSE
			CALL SET_SHIRT, "切驳服"
		ENDIF
	ELSEIF COND("冬")
		IF RAND:3 == 0
			CALL SET_SHIRT, "蝴蝶結露肩外衣"
		ELSEIF RAND:3 == 0
			CALL SET_SHIRT, "二ットオフショル"
		ENDIF
	ENDIF
	CALL SET_SKIRT, "迷你裙"
	IF COND("秋") || COND("冬")
		CALL SET_OUTER, "连褲襪"
	ELSE
		CALL SET_SOCKS, "長筒襪"
	ENDIF
	IF COND("冬")
		IF RAND:2 == 0
			CALL SET_SHOES, "長靴"
		ELSE
			CALL SET_SHOES, "短筒女靴"
		ENDIF
	ELSE
		IF RAND:3 == 0
			CALL SET_SHOES, "平底鞋"
		ELSEIF RAND:2 == 0
			CALL SET_SHOES, "无后跟鞋"
		ELSE
			CALL SET_SHOES, "高跟鞋"
		ENDIF
	ENDIF
	IF COND("冬")
		CALL SET_OTHER, "风衣外套"
	ENDIF

ENDSELECT


