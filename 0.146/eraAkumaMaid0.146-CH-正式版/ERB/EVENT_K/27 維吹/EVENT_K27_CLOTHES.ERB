;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K27, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 內褲/白/
	CSTR:胸罩 = 简约胸罩/淡色/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "飾品"
	CSTR:飾品 = 

;学園での普段着です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "水手服"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服运动衫"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "競泳泳装"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	;服装に興味がないのでいつも雑な服を着ている
	IF COND("夏")
		CALL SET_SHIRT, "无袖女式衬衫"
		CALL SET_OUTER, "牛仔褲"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "運動鞋"
	ELSE
		CALL SET_SHIRT, "女式衬衫"
		CALL SET_OUTER, "牛仔褲"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "運動鞋"
	ENDIF

;自分の部屋(notあなたの部屋)で着ます
CASE "居家服"
	IF COND("夏")
		CALL SET_SHIRT, "无袖女式衬衫"
		CALL SET_OUTER, "牛仔褲"
	ELSE
		CALL SET_SHIRT, "女式衬衫"
		CALL SET_OUTER, "牛仔褲"
	ENDIF
;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"

;もちろんデートの際に着ます
CASE "约会衣装"
	CALL SET_SHIRT, "女式衬衫"
	CALL SET_OUTER, "牛仔褲"
	CALL SET_SOCKS, "短襪"
	CALL SET_SHOES, "運動鞋"
ENDSELECT

