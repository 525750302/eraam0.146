;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K35, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 內褲/Ｈ的颜色/
	CSTR:胸罩 = 文胸/Ｈ的颜色/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "飾品"
	CSTR:飾品 = 

;学園での普段着です。設定必須です
CASE "制服"
	IF COND("夏")
		CALL SET_COSTUME, "露脐装超短裙西装外衣/赤"
	ELSE
		CALL SET_COSTUME, "西装外衣/赤"
	ENDIF
	CALL SET_OUTER, "连褲襪"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	IF COND("秋") + COND("冬")
		CALL SET_COSTUME, "体操服运动衫/赤"
	ELSE
		CALL SET_COSTUME, "体操服高開衩布鲁马/赤"
	ENDIF

;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "競泳泳装/赤"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	CALL SET_SHIRT, "衬衫"
	CALL SET_SKIRT, "裙"
	CALL SET_OUTER, "连褲襪"
	CALL SET_SHOES, "小皮靴"
	CALL SET_PANTIES, "Ｈ的内衣"
	CALL SET_BRA, "Ｈ的胸罩"

;自分の部屋(notあなたの部屋)で着ます
CASE "居家服"
	IF CEVENT("灯服買った")
		CALL SET_SHIRT, "紧身高袍/紺色"
		CALL SET_SKIRT, "長褲"
		CALL SET_PANTIES, "蕾丝的胖次"
		CALL SET_BRA, "蕾丝胸罩"
	ELSEIF COND("秋") + COND("冬")
		CALL SET_SHIRT, "运动衫"
		CALL SET_PANTIES, "鬥士胖次"
		CALL SET_BRA, ""
	ELSE
		CALL SET_SHIRT, "半脱恤"
		CALL SET_PANTIES, "鬥士胖次"
		CALL SET_BRA, ""
	ENDIF

;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"
	CALL SET_SHIRT, "高領毛衣"
	CALL SET_SKIRT, "裙"
	CALL SET_OUTER, "连褲襪"
	CALL SET_SHOES, "小皮靴"
	SIF COND("秋") + COND("冬")
		CALL SET_OTHER, "粗呢外套"

;もちろんデートの際に着ます
CASE "约会衣装"
	IF COND("秋") + COND("冬")
		CALL SET_SHIRT, "女式衬衫"
		CALL SET_SKIRT, "束腰裙"
		CALL SET_OUTER, "连褲襪"
		CALL SET_SHOES, "短靴"
		CALL SET_OTHER, "粗呢外套"
		CALL SET_OTHER, "披肩"
	ELSE
		CALL SET_SHIRT, "女式衬衫"
		CALL SET_SKIRT, "束腰裙"
		CALL SET_OUTER, "连褲襪"
		CALL SET_SHOES, "短靴"
		CALL SET_OTHER, "蝴蝶結領帯丝巾"
	ENDIF
	CALL SET_PANTIES, "Ｈ的内衣"
	CALL SET_BRA, "Ｈ的胸罩"

ENDSELECT


