		CALL PRINT_STR, "「我是来叫醒你的，看到你这么精神，不由得就……_H_」_W"
	CASE "朝騎乗位"
		PRINTFORMW 「%TEXTR("嗯/啊嗯/哈啊")%，这个好啊……啊」
		IF TALENT:恋慕
			CALL PRINT_STR, @"「あ、おはよう、%CNAME("二人称")%_H_　今日も元気そうね_H_」_W"
		ELSE
			PRINTFORMW 「……あ、お、おはよう、%CNAME("二人称")%……その、これは治療のためだから……！」
		ENDIF
	CASE "朝接吻"
		CALL PRINT_STR, @"「んっ_H_　おはよう、%CNAME("二人称")% _H_　目は覚めた？」_W"
	CASE "朝添い寝"
		PRINTFORMW 「呵呵，早上好♪睡脸可真可爱啊♪」
	CASE "朝口交"
		PRINTFORMW %TEXTR("嗯/咕唧/呼呼")%，这个很好吃……啊」
		IF TALENT:恋慕
			CALL PRINT_STR, @"「あ、おはよう、%CNAME("二人称")% _H_」_W"
			CALL PRINT_STR, "「等一下，我现在就把它弄干净……_H_」_W"
		ELSE
			PRINTFORMW 「……あ、お、おはよう、%CNAME("二人称")%……その、これは治療のためだから……！」
		ENDIF
	CASE "朝六九式"
		PRINTFORMW %TEXTR("嗯/咕唧/呼呼")%，这个很好吃……啊」
		IF TALENT:恋慕
			IF CALCF("精飲経験", MASTER, TARGET) > 500 && TALENT:扶她
				CALL PRINT_STR, @"「あ、おはよう、%CNAME("二人称")% _H_」_W"
				CALL PRINT_STR, @"「目覚めの一杯に、%CNAME("一人称")%のミルクはどう？……なんて、ね_H_」_W"
				PRINTFORMW 勃起的阴茎在眼前晃动……
			ELSE
			CALL PRINT_STR, @"「あ、おはよう、%CNAME("二人称")% _H_」_W"
			CALL PRINT_STR, "「等一下，我现在就把它弄干净……_H_」_W"
