CASE "整理睡姿"
	;寝言
	CALL KOJO_SLEEP_K12
	WAIT
CASE "卖个破绽"
	SELECTCASE STR:日常イベント名
	CASE "Ｈ的邀请", "展示内褲"
		PRINTFORMW 
	CASE "推倒"
		PRINTFORMW 
	CASE "口淫"
		PRINTFORMW 
	CASE "亲脸頬", "接吻"
		PRINTFORMW 
