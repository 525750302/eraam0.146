	ENDIF
CASE "ただいま"
	PRINTFORMW 「我回来了」
	PRINTFORMW 帰宅した%CALLNAME:TARGET%は脇目も振らずに%CALLNAME:MASTER%の目の前までやってくると…
	CALL PRINT_STR, "「到家了吗_H_」_W"
	CALL PRINT_STR, "「呵呵、现在奖励一个的吻。_H_」_W"
CASE "既に入室"
	;家で出迎えてくれる時
	IF COND("夜")
		PRINTFORMW 「おかえりなさい、%CNAME("二人称")%」
		IF TALENT:恋慕
			PRINTFORMW 「ごはんにする？　お浴室にする？　それとも…わ、%CNAME("一人称")%にする？」
			CALL PRINT_SELECT, "吃饭/洗澡/和成美做"
			IF RESULT == 0
				;ごはんにする
				IF CALCF("精飲経験", MASTER, TARGET) > 500 && TALENT:扶她
					;今日のごはんはざーめんよ(はぁと)
					CALL PRINT_STR, "「我知道了，那么再见……嗯_H_」_W"
					PRINTFORMW %CALLNAME:TARGET%がおもむろに裙をたくし上げると没穿内褲だったらしくまだ柔らかさを残す阴茎が目に飛び込んできた……！
					CALL PRINT_STR, @"「今日のごはんは%CNAME("二人称")%の大好きな%CNAME("一人称")%の精液よ_H_」_W"
					PRINTFORMW 
					PRINTFORMW 「……開什么玩笑。啊、呀！？」
					PRINTFORMW 好不容易才在胯下接吻。
				ELSE
					PRINTFORMW 「知道了。马上就可以了，稍微等一下哦♪」
					PRINTFORMW %CALLNAME:TARGET%は袖をまくると廚房へ向かって行った…
				ENDIF
			ELSEIF RESULT == 1
				;お風呂にする
				PRINTFORMW 「那我准备一下，请稍等。」
				PRINTFORMW 「诶？你在准备什么？」
				CALL PRINT_STR, "「我们一起洗澡，你不是一定要做那个准备吗?_H_」_W"
			ELSE
				;成美にする
				PRINTFORMW 「呵呵，好開心啊♪」
				PRINTFORMW 「但是，不好好吃饭可不行。」
				IF TEXTS("曜日") == "土"
					CALL PRINT_STR, "「因为明天是休息日，所以一直到早上也不会分開_H_」_W"
				ELSE
					CALL PRINT_STR, "「就算期间饿了也不能分開哦_H_」_W"
				ENDIF
			ENDIF
		ELSE
			PRINTFORMW 「饭准备好了，要先洗澡吗？不过先做哪个都没関系的」
		ENDIF
	ELSE
		;部室で出迎え
		PRINTFORMW 「こんにちは、%CNAME("二人称")%」
		PRINTFORMW 「明明在同一个教室上课，现在才来吗？呵呵」
	ENDIF

CASE "入室打招呼"
	SELECTCASE CFLAG:MASTER:PREV_DAILYCATE
	;トーク
	CASE 1
		SELECTCASE CSTR:MASTER:PREV_DAILYCOM
		CASE "甜言蜜语"
			IF TALENT:相思相愛
				CALL PRINT_STRW, "「不知道……他们看起来関系相当好呢？_H_」"
				PRINTFORMW 「%CNAME("一人称")%、一応%CNAME("二人称")%の恋人だったと思うんだけど」
				PRINTFORMW 「当然、%CNAME("一人称")%にも言葉をかけてくれるのよね？」
				PRINTFORMW %CALLNAME:TARGET%の笑顔が怖い…
			ELSE
				PRINTFORMW 「你、你好~……」
				PRINTFORMW %CALLNAME:TARGET%は小声で打招呼と気まずそうに入ってきた…
			ENDIF
		CASE "打招呼舐陰", "打招呼口交"
			PRINTFORMW 「你好……你在干什么呢？」
			IF TALENT:恋慕 && TALENT:扶她
				PRINTFORMW 「打招呼？哼……那当然了，你也和我一样跟我打招呼吧？」
				PRINTFORMW %CALLNAME:TARGET%は露出笑容自己的股間を指している…
			ELSE
				PRINTFORMW 「打招呼……这到底是哪里的打招呼啊！」
				PRINTFORMW 「这样的话至少在床上做吧……」
			ENDIF
		ENDSELECT
	;もてなす
	CASE 2
	;隙を見せる
	CASE 3
	;パンツ
	CASE 4
		PRINTFORMW 「你好……你在干什么呢？」
	;性処理
	CASE 6
		PRINTFORMW 「……变态」
		PRINTFORMW %CALLNAME:TARGET%に冷たい目で見られた…
	;それ以外
	CASEELSE
		SELECTCASE CSTR:MASTER:PREV_DAILYCOM
		CASE "胖次交易"
			PRINTFORMW 「你好……你在干什么呢？」
			PRINTFORMW 「诶？收到内裤了吗？」
			IF COND("合意：胖次交易")
				PRINTFORMW 「%CNAME("一人称")%のだけじゃ飽き足らず……」
				PRINTFORMW 「%CNAME("二人称")%って、胖次を集める趣味でもあるの？」
				PRINTFORMW %CALLNAME:TARGET%はあきれ顔だ…
			ELSE 
				PRINTFORMW 「……变态」
				PRINTFORMW %CALLNAME:TARGET%に冷たい目で見られた…
			ENDIF
		ENDSELECT
	ENDSELECT

	;何か発言してたらここまで
	SIF LINECOUNT > MEMO_LINECOUNT
		RETURN 1
		
	PRINTFORMW 「こんにちは、%CNAME("二人称")%」
	PRINTFORMW 「明明在同一个教室上课，现在才来吗？呵呵」
CASE "抜け出された"

CASE "便当"
	PRINTFORMW 「怎么样？连我自己都觉得做得很好」
	PRINTFORMW 慣れているのか、%CALLNAME:TARGET%の作ってきた便当はとてもおいしい
	IF TALENT:相思相愛
		PRINTFORMW だが、\@ TALENT:扶她 ? 二人 # %CALLNAME:MASTER% \@の弁当には%TEXTR("レバー/山芋/ウナギ")%など、精力の付きそうなものばかりが並んでいるのが気になる…
		PRINTFORMW 「不知道这种东西有没有效果？……呐，吃吃看吧？」
	ELSE
		PRINTFORMW 「今天试着做了%TEXTR("日式/西式/中式")%的便当♪」
	ENDIF
ENDSELECT

