	IF EXP_GAIN("睡眠姦経験", ARG)
		;インサート解除
		CALL RESET_INSERT, ARG, MASTER
	ENDIF
	CALL RESET_STAIN_EX, "整理睡姿", ARG
	SIF CFLAG:ARG:汗 > 0
		CFLAG:ARG:汗 = 1
CASE "甜言蜜语"
	SIF CALCF("甜言蜜语成功", ARG)
		CFLAG:ARG:甜言蜜语 = 1
CASE "夸奖"
	SIF CFLAG:ARG:夸奖 == 0
		CFLAG:ARG:夸奖 = 1
