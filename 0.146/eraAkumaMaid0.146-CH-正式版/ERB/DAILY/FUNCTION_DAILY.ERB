	ELSEIF TALENT:MASTER:聰慧 && TALENT:聰慧
		CFLAG:勉強時間 += 1
		CFLAG:MASTER:勉強時間 += 1
	ELSEIF TALENT:MASTER:聰慧 || (TALENT:MASTER:笨蛋 == 0 && TALENT:笨蛋)
		CFLAG:勉強時間 += 1
	ELSEIF TALENT:聰慧
		CFLAG:MASTER:勉強時間 += 1
