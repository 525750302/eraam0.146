	;ムードボーナスが高い場所でFLAG:ムード+60、普通ならFLAG:ムード+30、デートっぽくない場所だと修正なし
	FLAG:情緒 += 30
	;それぞれ可能なもののコメントアウトを外す
	;TFLAG:デートエロ可能 = 1
	;TFLAG:デート手つなぎ可能 = 1
	;TFLAG:下着チラ見え可能 = 1
	;TFLAG:水着デート = 1
CASE "追加選択肢之２"
	PRINTFORMW 「台詞」
	;地の文
	PRINTFORMW %SAVESTR:约会%での%CALLNAME:TARGET%の反応
	;地の文を用意していない場合には汎用のものを使う
	;CALL DAILY_MESSAGE, "デート本番"
	PRINTL 
	;ムードボーナスが高い場所でFLAG:ムード+60、普通ならFLAG:ムード+30、デートっぽくない場所だと修正なし
	FLAG:情緒 += 30
	;それぞれ可能なもののコメントアウトを外す
	;TFLAG:デートエロ可能 = 1
	;TFLAG:デート手つなぎ可能 = 1
	;TFLAG:下着チラ見え可能 = 1
	;TFLAG:水着デート = 1
ENDSELECT

