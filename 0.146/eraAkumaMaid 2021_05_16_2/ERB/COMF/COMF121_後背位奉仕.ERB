@COM_ORDER_COM121, ARG
VARSET LOCAL
LOCALS = 

;すべての命令に共通の要素を考慮
;(信頼が高いと命令に従いやすいなど)
CALL COM_ORDER, ARG

LOCAL = RESULT

IF PENIS(TARGET)
	LOCAL += 25
	LOCALS = %LOCALS% + ペニス有り(25)
ENDIF
;貞操観念
IF TALENT:貞操観念
	LOCAL -= 10
	LOCALS = %LOCALS% - 貞操観念(10)
ENDIF
;貞操無頓着
IF TALENT:貞操無頓着
	LOCAL += 5
	LOCALS = %LOCALS% + 貞操無頓着(5)
ENDIF
;快感に素直
IF TALENT:快感に素直
	LOCAL += 2
	LOCALS = %LOCALS% + 快感に素直(2)
ENDIF
;快感の否定
IF TALENT:快感の否定
	LOCAL -= 1
	LOCALS = %LOCALS% - 快感の否定(1)
ENDIF

;調教者が処女
IF EXP:PLAYER:Ｖ経験 == 0
	LOCAL -= 15
	LOCALS = %LOCALS% - %CALLNAME:PLAYER%が処女(15)
ENDIF

;汚れあり
IF COM_ORDER_STAIN("Ｖ", "Ｐ")/2
	LOCAL -= COM_ORDER_STAIN("Ｖ", "Ｐ")/2
	LOCALS = %LOCALS% - 汚れあり
	;汚臭鈍感
	SIF TALENT:汚臭鈍感 || TALENT:汚臭敏感
		LOCALS = %LOCALS%、\@TALENT:汚臭鈍感 ? 汚臭鈍感 # 汚臭敏感\@
	SIF COND("陶酔")
		LOCALS = %LOCALS%、陶酔で半減
	LOCALS = %LOCALS%({COM_ORDER_STAIN("Ｖ", "Ｐ")/2})
ENDIF

;合計を表示(45以上で実行)
CALL PRINT_COM_ORDER_COM, LOCALS, ARG, LOCAL, 45

RETURN RESULT
