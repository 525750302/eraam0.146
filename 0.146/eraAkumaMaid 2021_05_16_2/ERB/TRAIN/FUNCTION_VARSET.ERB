;-------------------------------------------------
;その名の通り、VARSETする関数を突っ込むファイル
;ドッペルあなたを用いる時は慎重に
;-------------------------------------------------

;-------------------------------------------------
;@IS_ABLUPの計算でドッペルあなたのパラメーターを必要値の判定に用いる
;-------------------------------------------------
@VARSET_ABLUP
;JUELの20番までを初期化
VARSET JUEL:0:0, 0, 0, 20

;-------------------------------------------------
;@COMFでのソースの計算でドッペルあなたのパラメーターを必要値の判定に用いる
;-------------------------------------------------
@VARSET_COMF
;SOURCEの29番までを初期化
VARSET SOURCE:0:0, 0, 0, 30
;DOWNBASEの9番までを初期化
VARSET DOWNBASE:0:0, 0, 0, 10

;-------------------------------------------------
;@SOURCE_NOTCVABMでのCUPの計算でドッペルあなたのパラメーターを必要値の判定に用いる
;-------------------------------------------------
@VARSET_NOTCVABM
;CUPの29番までを初期化
VARSET CUP:0:0, 0, 0, 30

;-------------------------------------------------
;@PROFILEでのCALL EVENT_PROFILE, "勧誘"内でのCFLAG,BASE,TALENT,ABL,EXP,CSTRの変更にドッペルあなたのパラメーターを用いる
;-------------------------------------------------
@VARSET_PROFILE
VARSET CFLAG:0:0, -1
VARSET BASE:0:0, -1
VARSET TALENT:0:0, -1
VARSET ABL:0:0, -1
VARSET EXP:0:0, -1
VARSET CSTR:0:0, "-1"

@VARSET_MAIDFACE, ARG
;顔グラ設定がないキャラ用関数を呼ぶ
CALL PRESET_MAIDFACE, ARG

;髪と表情の各パラについて空文字だった場合にはデフォ値を代入する
SIF CSTR:ARG:髪の色 == ""
	CSTR:ARG:髪の色 = 黒髪
SIF CSTR:ARG:髪の長さ == ""
	CSTR:ARG:髪の長さ = %CONDS("髪の長さ", ARG)%
SIF CSTR:ARG:前髪 == ""
	CSTR:ARG:前髪 = ナチュラルバング
SIF CSTR:ARG:後ろ髪 == ""
	CSTR:ARG:後ろ髪 = ナチュラル
SIF CSTR:ARG:アレンジ == ""
	CSTR:ARG:アレンジ = ノーアレンジ
SIF CSTR:ARG:アホ毛 == ""
	CSTR:ARG:アホ毛 = アホ毛なし
SIF CSTR:ARG:リボン == ""
	CSTR:ARG:リボン = リボンなし

SIF CSTR:ARG:目の色 == ""
	CSTR:ARG:目の色 = %CONDS("右目の色", ARG)%
SIF CSTR:ARG:目の形 == ""
	CSTR:ARG:目の形 = %CONDS("右目の形", ARG)%
SIF CSTR:ARG:白目 == ""
	CSTR:ARG:白目 = %CONDS("右白目", ARG)%
SIF CSTR:ARG:眉の形 == ""
	CSTR:ARG:眉の形 = %CONDS("眉の形", ARG)%
SIF CSTR:ARG:口の形 == ""
	CSTR:ARG:口の形 = %CONDS("口の形", ARG)%

SIF CSTR:ARG:種族 == ""
	CSTR:ARG:種族 = 人間
SIF ARG != MASTER
	CFLAG:ARG:顔グラ = 1
