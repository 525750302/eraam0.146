				IF CONFIG("実行判定フィルタ")
					TFLAG:実行値ボーナス = 1000
					TRYCALLFORM COM_ABLE{LCOUNT}
					IF RESULT == 0
						TFLAG:実行値ボーナス = 0
						CONTINUE
					ENDIF
				ELSE
					CONTINUE
				ENDIF
			ENDIF
		ENDIF

		RESETCOLOR
		SIF FIRSTCOM(LCOUNT) == 0
			SETCOLOR DEF_COLOR("明灰色")

		IF CONFIG("コマンドフィルタ") == 0
			;コマンド表示フィルタ
			SELECTCASE DITEMTYPE:0:LCOUNT
			;禁止設定
			CASE 2
				CONTINUE
			ENDSELECT
		ELSE
		 	SELECTCASE TRAINNAME:LCOUNT
			CASE "～予備～"
				CONTINUE
			ENDSELECT
		ENDIF

		IF CONFIG("コマンドフィルタ") == 0
			;コマンド名が通常と違う場合には色を変える(押し倒し状態での基本コマンドは色を変えない)
			SIF TRAIN_NAME_SELECT(LCOUNT) != TRAIN_NAME_STANDARD(LCOUNT)
				SETCOLOR DEF_COLOR("ハートピンク")

			;プレイを終わらせられる時には色を変える
			SELECTCASE LCOUNT
			;潤滑不足の際には色を変える
			CASE 60 TO 69
				SIF COND("Ｖ潤十分") == 0
					SETCOLOR DEF_COLOR("青")
			CASE 70 TO 79
				SIF COND("Ａ潤十分") == 0
					SETCOLOR DEF_COLOR("青")
			CASE 31
				SIF TEQUIP:バイブ
					SETCOLOR DEF_COLOR("黄色")
			CASE 33
				SIF TEQUIP:アナルバイブ
					SETCOLOR DEF_COLOR("黄色")
			CASE 99
				SIF TEQUIP:シックスナイン
					SETCOLOR DEF_COLOR("黄色")
			CASE 132
				SIF TEQUIP:鼻フック
					SETCOLOR DEF_COLOR("黄色")
			CASE 133
				SIF TEQUIP:アイマスク
					SETCOLOR DEF_COLOR("黄色")
			CASE 134
				SIF TEQUIP:拘束
					SETCOLOR DEF_COLOR("黄色")
			CASE 135
				SIF TEQUIP:口枷
					SETCOLOR DEF_COLOR("黄色")
			CASE 136
				SIF COND("アナル栓")
					SETCOLOR DEF_COLOR("黄色")
			CASE 149
				SIF TEQUIP:カテーテル
					SETCOLOR DEF_COLOR("黄色")
			CASE 152
				SIF TEQUIP:尿道バイブ
					SETCOLOR DEF_COLOR("黄色")
			CASE 170
				SIF TEQUIP:ビデオカメラ
					SETCOLOR DEF_COLOR("黄色")
			CASE 171
				SIF TEQUIP:野外プレイ
					SETCOLOR DEF_COLOR("黄色")
			CASE 172
				SIF TEQUIP:お風呂プレイ
					SETCOLOR DEF_COLOR("黄色")
			CASE 173
				SIF TEQUIP:新妻プレイ
					SETCOLOR DEF_COLOR("黄色")
			CASE 174
				SIF TEQUIP:室内露出プレイ
					SETCOLOR DEF_COLOR("黄色")
			;消耗品
			CASE 260 TO 279
				;色が異なる場合には消耗品フィルタがONでも例外的に表示
				SIF CONFIG("消耗品フィルタ") && GETCOLOR() != DEF_COLOR("黄色") && GETCOLOR() != DEF_COLOR("ハートピンク")
					CONTINUE
			CASEELSE
				;選んでも時間が進まないコマンドは色を変える
				SIF NOTTIME_PLAY(LCOUNT)
					SETCOLOR DEF_COLOR("緑")
			ENDSELECT
		ELSE
			SELECTCASE DITEMTYPE:0:LCOUNT
			;通常状態
			CASE 0
				SELECTCASE LCOUNT
				CASE 0 TO 9, 60, 61, 65, 71, 75, 80 TO 95, 98, 99, 230 TO 289
					SETCOLOR DEF_COLOR("暗黄色")
				CASEELSE
					RESETCOLOR
				ENDSELECT
			;禁止設定
			CASE 2
				SETCOLOR DEF_COLOR("緑")
			ENDSELECT
		ENDIF

		;実行判定フィルタON
		IF TFLAG:実行値ボーナス
			SETCOLOR DEF_COLOR("水色")
			TFLAG:実行値ボーナス = 0
		ENDIF

		PRINTFORMC %TRAIN_NAME_SELECT(LCOUNT)%\@ CHECK_COM("好きな体位", LCOUNT) ? ☆ # \@[{NUM_TRAIN, 3}]

		NEXT_LINE += 1

		SIF NEXT_LINE % NUM_COLUMN == 0
			PRINTL 
	NEXT
	SIF NEXT_LINE % NUM_COLUMN
		PRINTL 
ENDIF
