	NUM_COLUMN = 3

	;直接選択できるコマンドは499番までだが、現状は300までで十分すぎる
	FOR LCOUNT, 0, 300
		SIF STRLENS(TRAINNAME:LCOUNT) == 0
			CONTINUE

		NUM_TRAIN += 1

		IF CONFIG("コマンドフィルタ：全コマンド表示") == 0
			TRYCALLFORM COM_ABLE{LCOUNT}
