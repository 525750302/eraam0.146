				MEMO_LINECOUNT = LINECOUNT
				CALL KOJO_EVENT, "調教者交代"
				SIF LINECOUNT == MEMO_LINECOUNT
					CLEARLINE LINECOUNT - TFLAG:LINECOUNT記録
			ENDIF
		ELSEIF ASSI
			IF COND("Ｈはあなたとだけ") || COND("Ｈはあなたとだけ", ASSI)
				CALL PRINT_STRW, @"イエロー_どちらかが[ＮＴＲ禁止]フラグをONにしているので交代は出来ません"
