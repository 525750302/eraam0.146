;-------------------------------------------------
;	うふふ中 ランダム口上
;-------------------------------------------------
@LEARA_RAND_TALK_PLAYING(ARG, ARGS:0, ARGS:1, ARGS:2)
#FUNCTIONS
#DIMS TALKS

$LEARA_RAND_TALK_PLAYING_LP1

; うふふ中か？
SIF COND("調教中") == 0
	RETURNF TALKS

; 口が使えない
;   cf.) 口枷中、口淫中
TALKS = %LEARA_RAND_TALK_BUSY_MOUSE(ARG, ARGS:0, ARGS:1, ARGS:2)%
SIF STRLENS(TALKS)
	RETURNF TALKS

; 絶頂した
;TALKS = %LEARA_RAND_TALK_EXTACY(ARG, ARGS:0, ARGS:1, ARGS:2)%
SIF STRLENS(TALKS)
	RETURNF TALKS

; 挿入中
TALKS = %LEARA_RAND_TALK_INSERT(ARG, ARGS:0, ARGS:1, ARGS:2)%
SIF STRLENS(TALKS)
	RETURNF TALKS

; 汎用喘ぎ
TALKS = %LEARA_RAND_TALK_WORD()%

; 終了
RETURNF TALKS


;-------------------------------------------------
;	ランダム口上 口を使えない
;		・口枷中
;			基本、「～」と「っ」、あと記号のみになる
;		・口淫中
;			舐めたりしゃぶったり
;-------------------------------------------------
@LEARA_RAND_TALK_BUSY_MOUSE(ARG, ARGS:0, ARGS:1, ARGS:2)
#FUNCTIONS
#DIMS TALKS
#DIMS VOICES
#DIM TALK_COUNT
#DIM VOICE_LEN
#DIM VOICE_LEN_CNT

; 初期化
VARSET TALKS

; 語数
IF ARG == 0
	TALK_COUNT = RAND:3 + 2
ELSE
	TALK_COUNT = ARG
ENDIF

; 口枷中 or 口淫中？
SIF TEQUIP:口枷 == 0 && !COND("口淫中")
	RETURNF TALKS

$LEARA_RAND_TALK_BUSY_MOUSE_LP1
VARSET VOICES

; 本体生成
IF TEQUIP:口枷
	; 口枷中
	VOICE_LEN = 1 + RAND:5
	FOR VOICE_LEN_CNT, 0, VOICE_LEN
		VOICES += "～"
	NEXT
	SIF RAND:2
		VOICES += "っ"
	SELECTCASE RAND:10
		CASE 0 TO 3
			VOICES += "_H_"
			SIF RAND:2
				VOICES += "H_"
		CASE 4 TO 7
			VOICES += "_HH_"
			SIF RAND:2
				VOICES += "HH_"
		CASEELSE
			VOICES += "♪"
			SIF RAND:2
				VOICES += "♪"
	ENDSELECT
ELSE
	; 口淫中
	;   喘ぎのような単純ランダムではなく、ある程度ストーリー仕立てとする

	; 導入(なくてもよい)
	VARSET LOCALS
	IF RAND:10 < 4
		LOCALS = あむ/ん/はむ/あーん/んく/んむ/んむぅ
		VOICES = %TEXTR(LOCALS)%
		SIF RAND:2
			VOICES += "……"
		SELECTCASE RAND:10
			CASE 0 TO 3
				VOICES += "♪"
				SIF RAND:2
					VOICES += "♪"
				SIF TALK_COUNT
					VOICES += "　"
			CASE 4 TO 7
				IF RAND:10 < 8
					VOICES += "_H_"
					SIF RAND:2
						VOICES += "H_"
				ELSE
					VOICES += "_HH_"
					SIF RAND:2
						VOICES += "HH_"
				ENDIF
				SIF TALK_COUNT
					VOICES += "　"
			CASEELSE
				VOICES += "。"
		ENDSELECT
	ENDIF

	; 本体(必須)
	VOICE_LEN = RAND:4 + 1
	FOR VOICE_LEN_CNT, 0, VOICE_LEN
		VARSET LOCALS
		LOCALS = %TEXTR("んちゅ/ん/んむ/んぁ/あむ/えろぉ/あむあむ")%
		SIF RAND:2
			LOCALS += "……"
		SELECTCASE RAND:10
			CASE 0 TO 3
				LOCALS += "♪"
				SIF TALK_COUNT
					LOCALS += "　"
			CASE 4 TO 7
				LOCALS += "_H_"
				SIF TALK_COUNT
					LOCALS += "　"
			CASEELSE
				LOCALS += "。"
		ENDSELECT
		VOICES += LOCALS
	NEXT

	; 結び(なくてもよい)
	;   あんまりバリエーションが無いので固定で
	IF RAND:2
		LOCALS =%TEXTR(" んちゅ/ん～～/っぷは/ぷは/っぷはぁ/っぷは/はぁ")%
		SIF RAND:3
			LOCALS += "……"
		SELECTCASE RAND:10
			CASE 0 TO 3
				LOCALS += "♪"
				SIF TALK_COUNT
					LOCALS += "　"
			CASE 4 TO 7
				LOCALS += "_H_"
				SIF TALK_COUNT
					LOCALS += "　"
			CASEELSE
				LOCALS += "。"
		ENDSELECT
		VOICES += LOCALS
	ENDIF
ENDIF

SIF STRLENS(VOICES) == 0
	GOTO LEARA_RAND_TALK_BUSY_MOUSE_LP1

; 繰り返し判定
IF TALK_COUNT > 0
	TALK_COUNT -= 1
	TALKS += VOICES
	GOTO LEARA_RAND_TALK_BUSY_MOUSE_LP1
ENDIF

RETURNF TALKS

