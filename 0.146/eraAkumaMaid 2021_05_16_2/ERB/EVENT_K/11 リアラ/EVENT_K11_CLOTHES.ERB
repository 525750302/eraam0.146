;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K11, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "下着"
	CSTR:パンツ = Ｔバック/緑色/
	CSTR:ブラ = ハーフカップブラ/薄緑/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "アクセサリ"
	CALL SET_OTHER, "眼鏡"

;学園での普段着です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "リボンタイブラウス"
	CALL SET_SHOES, "ショートブーツ"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服ブルマ"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "水着"
	CALL SET_COSTUME, "競泳水着"

;自宅など学園外で着ます。設定必須です
CASE "普段着"
	SELECTCASE TEXTS("季節")
	CASE "夏", "冬"
		CALL SET_SHIRT, "胸開きタートルネック"
		CALL SET_OUTER, "ホットパンツ"
		CALL SET_SOCKS, "ソックス"
		CALL SET_SHOES, "サンダル"
		CALL SET_PANTIES, "Ｈな下着"
		CALL SET_BRA, "ヌーブラ"
	CASE "秋"
		IF RAND:3 == 0
			CALL SET_SHIRT, "背中開きニットセーター"
			CALL SET_OUTER, "ローライズジーンズ"
			CALL SET_SOCKS, "ニーソックス"
			CALL SET_SHOES, "ブーツ"
		ELSEIF RAND:2
			CALL SET_SHIRT, "ニットセーター"
			CALL SET_SKIRT, "超ミニスカ"
			CALL SET_OUTER, "オープンパンスト"
			CALL SET_SHOES, "ロングブーツ"
		ELSE
			CALL SET_SHIRT, "ノースリーブブラウス"
			CALL SET_OUTER, "ホットパンツ"
			CALL SET_SOCKS, "網ストッキング"
			CALL SET_SHOES, "ショートブーツ"
		ENDIF
		CALL SET_PANTIES, "Ｈな下着"
		CALL SET_BRA, "Ｈなブラ"
	CASEELSE
		CALL SET_SHIRT, "ノースリーブブラウス"
		CALL SET_OUTER, "ホットパンツ"
		CALL SET_SOCKS, "網ストッキング"
		CALL SET_SHOES, "ショートブーツ"
		CALL SET_PANTIES, "Ｈな下着"
		CALL SET_BRA, "Ｈなブラ"
	ENDSELECT
;自分の部屋(notあなたの部屋)で着ます
CASE "部屋着"
	SELECTCASE TEXTS("季節")
	CASE "春", "夏", "秋"
		CALL SET_SHIRT, "ベビードール"
		CALL SET_PANTIES, "Ｈな下着"
		CALL SET_BRA, "Ｈなブラ"
	CASEELSE
		CALL SET_COSTUME, "リボンタイブラウス"
		CALL SET_SHOES, "ショートブーツ"
		CALL SET_PANTIES, "シースルーパンツ"
		CALL SET_BRA, "ハーフカップブラ"
	ENDSELECT
;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"

;もちろんデートの際に着ます
CASE "デート衣装"
	SELECTCASE TEXTS("季節")
	CASE "秋", "冬"
		CALL SET_SHIRT, "ニットセーター"
		CALL SET_SKIRT, "ロングスカート"
		CALL SET_SOCKS, "ガーターストッキング"
		CALL SET_SHOES, "ロングブーツ"
		CALL SET_PANTIES, "Ｈな下着"
		CALL SET_BRA, "Ｈなブラ"
	CASE "夏"
		IF RAND:2
			CALL SET_SHIRT, "へそ出しタンクトップ"
			CALL SET_OUTER, "ホットパンツ"
			CALL SET_SOCKS, "ソックス"
			CALL SET_SHOES, "ショートブーツ"
			CALL SET_PANTIES, "ハイレグパンツ"
			CALL SET_BRA, "Ｈなブラ"
		ELSE
			CALL SET_SHIRT, "サマードレス"
			CALL SET_SOCKS, "ガーターストッキング"
			CALL SET_SHOES, "サンダル"
			CALL SET_PANTIES, "ハイレグパンツ"
			CALL SET_BRA, "Ｈなブラ"
		ENDIF
	CASEELSE
		CALL SET_SHIRT, "ブラウス"
		CALL SET_SKIRT, "ミニスカート"
		CALL SET_SOCKS, "ハイソックス"
		CALL SET_SHOES, "パンプス"
		CALL SET_PANTIES, "Ｈな下着"
		CALL SET_BRA, "Ｈなブラ"
	ENDSELECT
ENDSELECT
