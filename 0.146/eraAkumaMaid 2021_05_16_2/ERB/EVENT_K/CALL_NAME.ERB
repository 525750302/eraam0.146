	VARSET LOCALS
	SPLIT STR:基本呼び名, "_", LOCALS
	PERSON_DEF = %LOCALS%
	KANA_DEF = %LOCALS:1%
;されていない場合は汎用呼び名
ELSE
	SELECTCASE ARGS
	CASE "一人称"
		PERSON_DEF = 私
		KANA_DEF = わたし
	CASE "二人称"
		;相手が主人
		IF PLAYER == MASTER
			PERSON_DEF = あなた
			KANA_DEF = あなた
		;相手が主人ではない
		ELSE
			PERSON_DEF = あなた
			KANA_DEF = あなた
		ENDIF
	CASE "主人"
		PERSON_DEF = ご主人様
		KANA_DEF = ごしゅじんさま
	CASEELSE
		;名前を呼ぶ相手のキャラ番号をACTORに代入する
		SELECTCASE ARGS
		;相手が助手
		CASE "助手"
			ACTOR = ASSI
		;ここにはARGSにキャラのCALLNAMEが入ったりしている場合(ARGS == "フェリシエル" など)に来る
		CASEELSE
			ACTOR = FIND_NO(ARGS)
		ENDSELECT

		IF ACTOR <= 0
			PERSON_DEF = %ARGS%
			KANA_DEF = %ARGS%
		ELSE
			;相手が教員
			IF COND("教員", ACTOR)
				STR:基本呼び名 = %CALLNAME:ACTOR%先生_%CSTR:ACTOR:ふりがな%せんせい

			;自分も相手も学生なら学年比較
			ELSEIF COND("学生") && COND("学生", ACTOR)
				;相手が同学年
				IF COND("学年") == COND("学年", ACTOR)
					STR:基本呼び名 = %CALLNAME:ACTOR%_%CSTR:ACTOR:ふりがな%
				;相手が下の学年
				ELSEIF COND("学年") > COND("学年", ACTOR)
					IF TALENT:ACTOR:オトコ
						STR:基本呼び名 = %CALLNAME:ACTOR%_%CSTR:ACTOR:ふりがな%
					ELSE
						STR:基本呼び名 = %CALLNAME:ACTOR%ちゃん_%CSTR:ACTOR:ふりがな%ちゃん
					ENDIF
				;相手が上級生
				ELSE
					STR:基本呼び名 = %CALLNAME:ACTOR%先輩_%CSTR:ACTOR:ふりがな%せんぱい
				ENDIF

			;それ以外
			ELSE
				STR:基本呼び名 = %CALLNAME:ACTOR%さん_%CSTR:ACTOR:ふりがな%さん
			ENDIF

			VARSET LOCALS
			SPLIT STR:基本呼び名, "_", LOCALS
			PERSON_DEF = %LOCALS%
			KANA_DEF = %LOCALS:1%
		ENDIF
	ENDSELECT
ENDIF


