			PERSON = %CEVENTS("一人称主人")%
			KANA = %CEVENTS("一人称主人かな")%
		ELSEIF PLAYER == ASSI && CEVENTS("一人称助手") != ""
			PERSON = %CEVENTS("一人称助手")%
			KANA = %CEVENTS("一人称助手かな")%
		ELSEIF CEVENTS("一人称") != ""
			PERSON = %CEVENTS("一人称")%
			KANA = %CEVENTS("一人称かな")%
		ENDIF
	CASE "二人称"
		IF PLAYER == MASTER && CEVENTS("二人称主人") != ""
			PERSON = %CEVENTS("二人称主人")%
			KANA = %CEVENTS("二人称主人かな")%
		ELSEIF PLAYER == ASSI && CEVENTS("二人称助手") != ""
			PERSON = %CEVENTS("二人称助手")%
			KANA = %CEVENTS("二人称助手かな")%
		ELSEIF CEVENTS("二人称") != ""
			PERSON = %CEVENTS("二人称")%
			KANA = %CEVENTS("二人称かな")%
		ENDIF
	CASE "主人"
		IF CEVENTS("二人称主人") != ""
			PERSON = %CEVENTS("二人称主人")%
			KANA = %CEVENTS("二人称主人かな")%
		ELSEIF CEVENTS("二人称") != ""
			PERSON = %CEVENTS("二人称")%
			KANA = %CEVENTS("二人称かな")%
		ENDIF
	CASE "助手"
		IF CEVENTS("二人称助手") != ""
			PERSON = %CEVENTS("二人称助手")%
			KANA = %CEVENTS("二人称助手かな")%
		ELSEIF CEVENTS("二人称") != ""
			PERSON = %CEVENTS("二人称")%
			KANA = %CEVENTS("二人称かな")%
		ENDIF
	ENDSELECT
