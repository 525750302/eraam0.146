;ARGに発言者の番号を入れてください
;--------------------------------------------------
@CNAMET(ARG, ARGS, ARGS:1, ARGS:2, ARGS:3, ARGS:4)
#FUNCTIONS
#DIM MEMO_TARGET

MEMO_TARGET = TARGET

;変換が必要なARGSの処理
SELECTCASE ARGS
;パートナー呼びはTARGETの名前呼びに変換する
CASE "パートナー"
	SIF ARG != TARGET
		ARGS = %CALLNAME:TARGET%
ENDSELECT

TARGET = ARG

LOCALS = %CNAME(ARGS, ARGS:1, ARGS:2, ARGS:3, ARGS:4)%

TARGET = MEMO_TARGET

RETURNF LOCALS

