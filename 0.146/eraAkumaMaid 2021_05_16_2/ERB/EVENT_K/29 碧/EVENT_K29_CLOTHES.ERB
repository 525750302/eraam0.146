;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K29, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "下着"
	CSTR:パンツ = ショーツ/白/
	CSTR:ブラ = スポーツブラ/黒/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "アクセサリ"
	CSTR:アクセサリ = 

;学園での普段着です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "セーラー服"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	IF COND("秋") + COND("冬")
		CALL SET_COSTUME, "体操服ジャージ"
	ELSE
		CALL SET_COSTUME, "体操服ハーフパンツ"
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "水着"
	CALL SET_COSTUME, "スク水"

;自宅など学園外で着ます。設定必須です
CASE "普段着"
	IF COND("土曜") + COND("日曜")
		IF COND("秋") + COND("冬")
			CALL SET_SHIRT, "フリルブラウス"
			CALL SET_SKIRT, "ロングスカート"
			CALL SET_OUTER, "パンスト"
			CALL SET_SHOES, "スニーカー"
			CALL SET_OTHER, "ケープ"
		ELSE
			CALL SET_SHIRT, "ブラウス"
			CALL SET_OUTER, "ジーンズ"
			CALL SET_SOCKS, "ハイソックス"
			CALL SET_SHOES, "スニーカー"
		ENDIF
	ELSE
		CALL SET_COSTUME, "セーラー服"
		SIF COND("冬")
			CALL SET_OUTER, "パンスト"
	ENDIF

;自分の部屋(notあなたの部屋)で着ます
CASE "部屋着"
	IF COND("土曜") + COND("日曜")
		IF COND("秋") + COND("冬")
			CALL SET_SHIRT, "フリルブラウス"
			CALL SET_SKIRT, "ロングスカート"
			CALL SET_SOCKS, "ハイソックス"
			CALL SET_OTHER, "ケープ"
		ELSE
			CALL SET_SHIRT, "ブラウス"
			CALL SET_OUTER, "ジーンズ"
			CALL SET_SOCKS, "ハイソックス"
		ENDIF
	ENDIF
;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"

;もちろんデートの際に着ます
CASE "デート衣装"
	IF COND("秋") + COND("冬")
		CALL SET_SHIRT, "フリルブラウス"
		CALL SET_SKIRT, "ロングスカート"
		CALL SET_OUTER, "パンスト"
		CALL SET_SHOES, "スニーカー"
		CALL SET_OTHER, "ケープ"
	ELSE
		CALL SET_SHIRT, "フリルブラウス"
		CALL SET_SKIRT, "スカート"
		CALL SET_SOCKS, "ハイソックス"
		CALL SET_SHOES, "スニーカー"
	ENDIF

ENDSELECT


