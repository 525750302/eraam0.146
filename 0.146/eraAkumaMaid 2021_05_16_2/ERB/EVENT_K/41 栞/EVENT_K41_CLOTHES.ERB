;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K41, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "下着"
	CSTR:パンツ = フリルのパンツ/おとなしい色/フロントリボン紐/
	CSTR:ブラ = フリルのブラ/おとなしい色/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "アクセサリ"
	CSTR:アクセサリ = 

;学園での普段着です。設定必須です
CASE "制服"
	IF COND("春") + COND("夏") + COND("秋")
		CALL SET_COSTUME, "セーラー服"
	ELSE
		CALL SET_COSTUME, "セーラー服"
		CALL SET_SOCKS, "ストッキング"
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服ブルマ"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "水着"
	CALL SET_COSTUME, "スク水"

;自宅など学園外で着ます。設定必須です
CASE "普段着"
	SELECTCASE TEXTS("季節")
	CASE "春"
		IF RAND:2
			CALL SET_SHIRT, "ワンピース"
			CALL SET_SKIRT, "スカート"
			CALL SET_SOCKS, "ハイソックス"
			CALL SET_SHOES, "ローファー"
		ELSE
			CALL SET_OTHER, "眼鏡"
			CALL SET_SHIRT, "パーカー"
			CALL SET_OUTER, "ジーンズ"
			CALL SET_SHOES, "スニーカー"
		ENDIF
	CASE "夏"
		IF RAND:2
			CALL SET_OTHER, "ピクチャーハット"
			CALL SET_SHIRT, "サマードレス"
			CALL SET_SKIRT, "スカート"
			CALL SET_SOCKS, "ハイソックス"
			CALL SET_SHOES, "スニーカー"
		ELSE
			CALL SET_OTHER, "眼鏡"
			CALL SET_SHIRT, "パーカー"
			CALL SET_OUTER, "ホットパンツ"
			CALL SET_SHOES, "スニーカー"
		ENDIF
	CASEELSE
		IF RAND:2
			CALL SET_SHIRT, "ショートコート"
			CALL SET_OUTER, "レギンス"
			CALL SET_SOCKS, "ハイソックス"
			CALL SET_SHOES, "ショートブーツ"
		ELSE
			CALL SET_OTHER, "眼鏡"
			CALL SET_SHIRT, "ニットオフショル"
			CALL SET_OUTER, "ジーンズ"
			CALL SET_SOCKS, "ハイソックス"
			CALL SET_SHOES, "スニーカー"
		ENDIF
	ENDSELECT
;自分の部屋(notあなたの部屋)で着ます
CASE "部屋着"
		IF RAND:4
			CALL SET_SHIRT, "Ｙシャツ"
			CALL SET_SKIRT, "スカート"
			CALL SET_SOCKS, "ハイソックス"
		ELSEIF RAND:3
			CALL SET_OTHER, "眼鏡"
			CALL SET_SHIRT, "Ｙシャツ"
			CALL SET_OUTER, "ズボン"
		ELSEIF RAND:2
			CALL SET_SHIRT, "Ｔシャツ"
			CALL SET_SKIRT, "ホットパンツ"
			CALL SET_SOCKS, "ハイソックス"
		ELSE
			CALL SET_SHIRT, "パーカー"
			CALL SET_SOCKS, "ストッキング"
			CALL SET_OUTER, "ショートパンツ"
		ENDIF
;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"

