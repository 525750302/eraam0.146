;もてなすコマンドで増やした選択肢の地の文と台詞
@KOJO_DAILY2_K36_ADDSELECT, ARGS
SELECTCASE ARGS
CASE "おやつをあげる"
	PRINTFORM %CALLNAME:MASTER%は
	IF RAND:2
		IF PLACE("居間")
			IF RAND:5 == 0
				PRINTFORMW 賞味期限の切れそうな%TEXTR("乾パン/桃缶/パイン缶/クラッカー")%を持ってきて、%CALLNAME:TARGET%に%TEXTR("与えた/渡した")%。
			ELSE
				PRINTFORM 冷蔵庫から
				IF COND("冬") || (COND("夏") == 0 && RAND:3 == 0) 
					PRINTFORMW %TEXTR("あんまん/ピザまん/肉まん/カレーまん")%を取り出すと、レンジでチンして%CALLNAME:TARGET%に%TEXTR("与えた/渡した")%。
				ELSE
					PRINTFORMW %TEXTR("プリン/コーヒーゼリー/アイス/ソフトクリーム/水ようかん/わらび餅")%を取り出して%CALLNAME:TARGET%に%TEXTR("与えた/渡した")%。
				ENDIF
			ENDIF
		ELSE
			IF COND("冬") && RAND:3 == 0
				PRINTFORMW こたつの上のみかんをひとつ取って、%CALLNAME:TARGET%にほいっと投げ%TEXTR("与えた/渡した")%。
			ELSE
				PRINTFORMW お菓子置き場から適当に%TEXTR("駄菓子/スナック菓子")%を引っ張り出して%CALLNAME:TARGET%に%TEXTR("与えた/渡した")%。
			ENDIF
		ENDIF
	ELSE
		PRINTFORM 食べていた
		IF STATE("酔い",MASTER) && STATE("酔い",TARGET) && RAND:2
			PRINTFORM おつまみ
		ELSEIF CFLAG:MASTER:お茶 && RAND:3 == 0
			PRINTFORM お茶請け
		ELSE
			PRINTFORM %TEXTR("駄菓子/スナック菓子/ポップコーン/ポテチ/ポッキー/クッキー/金平糖")%
		ENDIF
		PRINTFORM を
		PRINTFORMW %CALLNAME:TARGET%に少し分けてやった。
	ENDIF
	PRINTL 
	CALL EMOTION_PLUS, "褒める", TARGET
	PRINTFORMW %TEXTR("（幸せそうな笑顔）/「ありがとー♪」/「わーい♪」")%
	PRINTL 
	CALL PRINT_STR, @"%CALLNAME:TARGET%が[上機嫌]になりました_黄色_(実行値に+5ボーナス)_W"
	CFLAG:褒める = 2
CASE "デコピンをする"
	PRINTFORMW %CALLNAME:MASTER%は%TEXTR("突然/隙を突いて/何の脈絡もなく")%%CALLNAME:TARGET%に思いっきりデコピンをした。
	PRINTL 
	CALL EMOTION_PLUS, "怒り", TARGET
	PRINTFORMW 「%TEXTR("痛いが！？/何すんだ！/何すんだよ！")%」
	PRINTL 
	PRINTFORMW %CALLNAME:TARGET%が[不機嫌]になりました。
	CALL SETFLAG_DAILY, "不機嫌"
	CFLAG:褒める = 0
ENDSELECT

