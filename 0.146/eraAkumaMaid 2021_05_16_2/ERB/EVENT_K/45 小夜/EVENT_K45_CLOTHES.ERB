;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K45, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "下着"
	CSTR:パンツ = ショーツ/おとなしい色/
	CSTR:ブラ = シンプルブラ/おとなしい色/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "アクセサリ"
	CALL SET_OTHER, "眼鏡"

;学園での普段着です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "ブレザー"
	SIF COND("秋") + COND("冬")
		CALL SET_OUTER, "パンスト"

;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	IF COND("秋") + COND("冬")
		CALL SET_COSTUME, "体操服ジャージ"
	ELSE
		CALL SET_COSTUME, "体操服ハーフパンツ"
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "水着"
	CALL SET_COSTUME, "スク水"

;自宅など学園外で着ます。設定必須です
CASE "普段着"
	;残念先輩取り繕う
	IF COND("夏")
		CALL SET_SHIRT, "Ｔシャツ"
		CALL SET_OUTER, "ジーンズ"
		CALL SET_SOCKS, "ソックス"
		CALL SET_SHOES, "スニーカー"
	ELSE
		CALL SET_SHIRT, "ニットセーター"
		CALL SET_OUTER, "ジーンズ"
		CALL SET_SOCKS, "ソックス"
		CALL SET_SHOES, "スニーカー"
	ENDIF

;自分の部屋(notあなたの部屋)で着ます
CASE "部屋着"
	;中学の頃のジャージが心地いい残念先輩
	IF COND("夏")
		CALL SET_SHIRT, "Ｔシャツ"
		CALL SET_OUTER, "ジャージズボン"
		CALL SET_SOCKS, "ソックス"
	ELSE
		CALL SET_SHIRT, "ジャージ"
		CALL SET_OUTER, "ジャージズボン"
		CALL SET_SOCKS, "ソックス"
	ENDIF

;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"

;もちろんデートの際に着ます
CASE "デート衣装"
	IF TALENT:恋慕
		IF DAYEV("クリスマス")
			CALL SET_SHIRT, "セーター"
			CALL SET_OUTER, "ホットパンツ"
			CALL SET_OTHER, "ダッフルコート"
			CALL SET_SOCKS, "ストッキング"
			CALL SET_SHOES, "スニーカー"
			CALL SET_PANTIES, "Ｔバック/紫"
			CALL SET_BRA, "フリルのブラジャー/紫"
		ELSE
			CALL SET_SHIRT, "ブラウス"
			CALL SET_SKIRT, "スカート"
			CALL SET_SOCKS, "ストッキング"
			CALL SET_SHOES, "ミュール"
		ENDIF
	ELSEIF COND("秋") + COND("冬")
		CALL SET_SHIRT, "ニットセーター"
		CALL SET_OUTER, "ジーンズ"
		CALL SET_SOCKS, "ソックス"
		CALL SET_SHOES, "スニーカー"
	ELSE
		CALL SET_SHIRT, "カットソー"
		CALL SET_OUTER, "ジーンズ"
		CALL SET_SHOES, "スニーカー"
	ENDIF

ENDSELECT


