@CLOTHES_K21, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "下着"
	CSTR:パンツ = パンツ/白/
	CSTR:ブラ = ブラジャー/白/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "アクセサリ"
	CALL SET_OTHER, "髪留め"

;学園での普段着です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "ブレザー"
