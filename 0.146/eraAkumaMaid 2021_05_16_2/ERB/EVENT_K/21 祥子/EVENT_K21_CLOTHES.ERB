CASE "体操服"
	CALL SET_COSTUME, "体操服ジャージ"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "水着"
	CALL SET_COSTUME, "スク水"

;自宅など学園外で着ます。設定必須です
CASE "普段着"
	IF COND("冬")
		CALL SET_SHIRT, "ニットオフショル"
		CALL SET_SKIRT, "ロングスカート"
		CALL SET_SOCKS, "ソックス"
		CALL SET_SHOES, "ブーティ"
		CALL SET_OTHER, "ストール/ステッチコート"
		CALL SET_BRA, "キャミソール"
	ELSE
		CALL SET_SHIRT, "リボン付きオフショル"
		CALL SET_SKIRT, "スリットロングスカート"
		CALL SET_SHOES, "ミュール"
	ENDIF

