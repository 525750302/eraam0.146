;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K13, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "下着"
	IF COND("発情期") && BASE:欲求不満 >= 50 && TALENT:恋慕 && RAND:10 == 0
		CSTR:パンツ = 肉球プリントパンツ/黒/紐/
		CSTR:ブラ = 猫型ブラ/黒/紐/ランジェリー/
	ELSE
		CSTR:パンツ = ローライズパンツ/おとなしい色/
		CSTR:ブラ = シンプルブラ/おとなしい色/
	ENDIF

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "アクセサリ"
	CSTR:アクセサリ = 

;学園での普段着です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "ブレザー"
	IF COND("冬")
		CALL SET_OUTER, "ジャージズボン"
		CALL SET_OTHER, "マフラー"
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服ハーフパンツ"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "水着"
	CALL SET_COSTUME, "競泳水着"

;自宅など学園外で着ます。設定必須です
CASE "普段着"
	IF COND("日曜")
		IF COND("冬")
			CALL SET_SHIRT, "ニットセーター/赤"
			CALL SET_OUTER, "ジャージズボン"
		ELSE
			CALL SET_SHIRT, "だぼだぼＴシャツ"
			CALL SET_OUTER, "ハーフパンツ"
		ENDIF
	ELSE
		CALL CLOTHES_K13, "制服"
	ENDIF

;自分の部屋(notあなたの部屋)で着ます
CASE "部屋着"
	IF COND("夏")
		CALL SET_SHIRT, "だぼだぼＴシャツ"
	ELSE
		CALL CLOTHES_K13, "普段着"
	ENDIF

;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"

;もちろんデートの際に着ます
CASE "デート衣装"
	SELECTCASE TEXTS("季節")
	CASE "冬"
		CALL SET_SHIRT, "ニットセーター/赤"
		CALL SET_SKIRT, "ロングスカート"
		CALL SET_SHOES, "ブーツ"
		CALL SET_OTHER, "マフラー"
	CASE "夏"
		CALL SET_SHIRT, "ノースリーブブラウス"
		CALL SET_SKIRT, "ホットパンツ"
		CALL SET_SHOES, "パンプス"
	CASEELSE
		CALL SET_SHIRT, "ブラウス"
		CALL SET_SKIRT, "スカート"
		CALL SET_SHOES, "ミュール"
	ENDSELECT
	IF COND("発情中")
		CALL SET_PANTIES, "Ｈな下着"
		CALL SET_BRA, "Ｈなブラ"
	ENDIF

ENDSELECT
