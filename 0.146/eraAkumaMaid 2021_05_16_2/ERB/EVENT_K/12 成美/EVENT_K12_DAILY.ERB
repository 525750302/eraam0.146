	ELSEIF CFLAG:股間確認済 && RAND:2
		PRINTFORMW 
	;上機嫌
	ELSEIF CFLAG:褒める
		PRINTFORMW 
	ELSE
		PRINTFORMW 
	ENDIF
CASE "スカートをめくる"
	SELECTCASE STR:日常イベント名
	CASE "スカートたくし上げ"
		;パンチラ直後
