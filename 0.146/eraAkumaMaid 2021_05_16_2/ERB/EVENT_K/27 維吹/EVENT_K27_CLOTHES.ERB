;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K27, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "下着"
	CSTR:パンツ = ショーツ/白/
	CSTR:ブラ = シンプルブラ/おとなしい色/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "アクセサリ"
	CSTR:アクセサリ = 

;学園での普段着です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "セーラー服"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服ジャージ"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "水着"
	CALL SET_COSTUME, "競泳水着"

;自宅など学園外で着ます。設定必須です
CASE "普段着"
	;服装に興味がないのでいつも雑な服を着ている
	IF COND("夏")
		CALL SET_SHIRT, "ノースリーブブラウス"
		CALL SET_OUTER, "ジーンズ"
		CALL SET_SOCKS, "ソックス"
		CALL SET_SHOES, "スニーカー"
	ELSE
		CALL SET_SHIRT, "ブラウス"
		CALL SET_OUTER, "ジーンズ"
		CALL SET_SOCKS, "ソックス"
		CALL SET_SHOES, "スニーカー"
	ENDIF

;自分の部屋(notあなたの部屋)で着ます
CASE "部屋着"
	IF COND("夏")
		CALL SET_SHIRT, "ノースリーブブラウス"
		CALL SET_OUTER, "ジーンズ"
	ELSE
		CALL SET_SHIRT, "ブラウス"
		CALL SET_OUTER, "ジーンズ"
	ENDIF
;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"

;もちろんデートの際に着ます
CASE "デート衣装"
	CALL SET_SHIRT, "ブラウス"
	CALL SET_OUTER, "ジーンズ"
	CALL SET_SOCKS, "ソックス"
	CALL SET_SHOES, "スニーカー"
ENDSELECT

