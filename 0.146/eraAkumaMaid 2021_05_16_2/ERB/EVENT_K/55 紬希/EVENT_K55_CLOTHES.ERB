;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K55, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
;相思相愛後の特定イベントでTSした時に着ける下着は未設定
CASE "下着"
;IF CEVENT(TSほにゃらら的な)
;ELSE
	CSTR:パンツ = パンティ/純白/
;ENDIF
;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "アクセサリ"
	CSTR:アクセサリ = 眼鏡

;学園での普段着です。設定必須です
CASE "制服"
	IF COND("夏")
		CALL SET_COSTUME, "ミニスカブレザー"
	ELSE
		CALL SET_COSTUME, "ブレザー"
		CALL SET_OUTER, "パンスト"
	ENDIF
	;女の子で、淫乱か特定ABL&MARKが一定の数値以上だと5％でノーパンノーブラ
	IF RAND:100 >= 95 && TALENT:男の娘 == 0 && (TALENT:淫乱 || ABL:露出癖 >= 5 && MARK:屈服刻印 >= 3 && MARK:快楽刻印 >= 3)
		CALL SET_COSTUME, "ミニスカブレザー"
		CSTR:パンツ = 
		CSTR:ブラ = 
	ELSEIF COND("夏")
		CALL SET_COSTUME, "ミニスカブレザー"
		CSTR:ブラ = フリルのブラ/純白/
		CSTR:パンツ = パンティ/フロントリボン三角赤/純白/
	ELSE
		CALL SET_COSTUME, "ブレザー"
		CSTR:ブラ = フリルのブラ/純白/
		CSTR:パンツ = パンティ/フロントリボン三角赤/純白/
		CALL SET_OUTER, "パンスト"
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服ブルマ"
	CSTR:ブラ = フリルのブラ/純白/
	CSTR:パンツ = パンティ/フロントリボン三角赤/純白/

;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "水着"
	CALL SET_COSTUME, "競泳水着"

;自宅など学園外で着ます。設定必須です
CASE "普段着"
	IF RAND:2
		CALL SET_SHIRT, "ブラウス"
		CALL SET_SKIRT, "フレアスカート"
		CALL SET_SOCKS, "ニーソックス"
		CALL SET_SHOES, "ローファー"
		CALL SET_OTHER, "リボンタイ"
	ELSEIF COND("秋") + COND("冬")
		CALL SET_SHIRT, "ニットセーター"
		CALL SET_SKIRT, "スカート"
		CALL SET_SOCKS, "ニーソックス"
		CALL SET_SHOES, "ローファー"
	ELSE
		CALL SET_SHIRT, "カットソー"
		CALL SET_SKIRT, "スカート"
		CALL SET_SOCKS, "ニーソックス"
		CALL SET_SHOES, "ローファー"
	ENDIF
	IF COND("夏") && TALENT:男の娘
		CSTR:パンツ = パンティ/フロントリボン三角赤/純白/
	ELSE
		CSTR:パンツ = パンティ/フロントリボン三角赤/純白/
		CALL SET_OUTER, "パンスト"
	ENDIF
	IF RAND:100 >= 95 && TALENT:男の娘 == 0 && TALENT:相思相愛 && ABL:露出癖 >= 5 && MARK:快楽刻印 >= 3
		CSTR:パンツ = 
		CSTR:ブラ = 
	ELSEIF RAND:100 >= 80 && TALENT:恋慕
		CSTR:パンツ = パンティ/フロントリボン紐白/薄桃/
		CSTR:ブラ = フリルのブラ/純白/
	ELSE	
		CSTR:パンツ = パンティ/フロントリボン三角赤/純白/
		CSTR:ブラ = フリルのブラ/純白/
	ENDIF
;自分の部屋(notあなたの部屋)で着ます
CASE "部屋着"
	CALL SET_SHIRT, "ワンピース"
	;恋慕かABL、MARKが一定値以上だとノーブラノーパンでいることがある
	;自室なので、こちらの方がノーパンノーブラ率はやや高め
	;勝負下着は自室だとむしろ履いてないかも
	IF COND("夏") && TALENT:男の娘
		CSTR:パンツ = パンティ/フロントリボン三角赤/純白/
	ELSE
		CSTR:パンツ = パンティ/フロントリボン三角赤/純白/
		CALL SET_OUTER, "パンスト"
	ENDIF
	IF RAND:100 >= 95 && TALENT:男の娘 == 0 && TALENT:相思相愛 && ABL:露出癖 >= 5 && MARK:快楽刻印 >= 3
		CSTR:パンツ = 
		CSTR:ブラ = 
	ELSEIF RAND:100 >= 80 && TALENT:恋慕
		CSTR:パンツ = パンティ/フロントリボン紐白/薄桃/
		CSTR:ブラ = フリルのブラ/純白/
	ELSE	
		CSTR:パンツ = パンティ/フロントリボン三角赤/純白/
		CSTR:ブラ = フリルのブラ/純白/
	ENDIF

;普段着と共用
CASE "外出着"

;もちろんデートの際に着ます
CASE "デート衣装"
	IF COND("夏")
		CALL SET_SHIRT, "浴衣"
		CALL SET_SOCKS, "足袋"
		CALL SET_SHOES, "草履"
	ELSE
		CALL SET_SHIRT, "和服"
		CALL SET_SOCKS, "足袋"
		CALL SET_SHOES, "草履"
	ENDIF
	IF COND("夏") && TALENT:男の娘
		CSTR:パンツ = パンティ/フロントリボン三角赤/純白/
	ELSE
		CSTR:パンツ = パンティ/フロントリボン三角赤/純白/
		CALL SET_OUTER, "パンスト"
	ENDIF
	IF RAND:100 >= 95 && TALENT:男の娘 == 0 && TALENT:相思相愛 && ABL:露出癖 >= 5 && MARK:快楽刻印 >= 3
		CSTR:パンツ = 
		CSTR:ブラ = 
	ELSEIF RAND:100 >= 80 && TALENT:恋慕
		CSTR:パンツ = パンティ/フロントリボン紐白/薄桃/
		CSTR:ブラ = フリルのブラ/薄桃/
	ELSE	
		CSTR:パンツ = パンティ/フロントリボン三角赤/純白/
		CSTR:ブラ = フリルのブラ/純白/
	ENDIF
	
ENDSELECT


