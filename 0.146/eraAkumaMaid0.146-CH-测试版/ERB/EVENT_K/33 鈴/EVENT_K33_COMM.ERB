			CALL PRINT_STR, @"『对H的事情不怎么了解也是…铃酱的魅力之一哦…_WH_』_W"
			PRINTFORMW 「但是…铃也想像綾乃姐姐一样能让对方舒服起来……」
			CALL PRINT_STR, @"『没问题的…_WH_H的事情的话，姐姐我无论多少都会回答的哦…_WH_』_W"
			CALL PRINT_STR, @"「是…非常感谢……_BHH_」_W"
			CALL SET_CEVENT, "情報提供者"
			TFLAG:台詞スキップ = 1
