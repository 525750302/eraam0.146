				TMPS = %LOCALS:CNT%/%TMPS%
			ELSE
				TMPS = %TMPS%%LOCALS:CNT%/
			ENDIF
		NEXT

		;初めての相手ならMEMOSは文字列が入っている
		SIF MEMOS != ""
			TMPS = %MEMOS%%TOSTR(SAMEN_VAL)%/%TMPS%
		CSTR:Ｖ中出され = %TMPS%

		; 確認用
		DEBUGPRINTFORML CSTR:Ｖ中出され = %CSTR:Ｖ中出され%

		; ついでに潤滑も増える
		;   増加量については要調整
		PALAM:Ｖ潤 += (500 + RAND:100) * (RAND:((ABL:精液中毒 + 1)) + 1)

ENDSELECT
