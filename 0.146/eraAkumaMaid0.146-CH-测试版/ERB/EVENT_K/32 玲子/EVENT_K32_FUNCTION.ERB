@RYOKO_COND(ARGS, ARG)
#FUNCTION

	SIF ARG == 0 && TARGET > 0
		ARG = TARGET
	; TARGETの確認
	SIF NO:ARG != 32
		RETURNF 0

	SELECTCASE ARGS
		CASE "淫紋：愛液過多"
			SIF MARK:ARG:淫紋 < 2
				RETURNF 0
			RETURNF 1
		CASE "処女"
			SIF EXP:ARG:Ｖ性交経験 > 0
				RETURNF 0
			RETURNF 1
		CASE "告白可能"
			SIF !TALENT:ARG:恋慕
				RETURNF 0
			SIF !CEVENT("イベント：初妊娠", ARG)
				RETURNF 0
			RETURNF 1
	ENDSELECT

	RETURNF 0


