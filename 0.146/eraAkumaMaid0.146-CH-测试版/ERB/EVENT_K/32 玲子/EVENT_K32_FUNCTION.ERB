@RYOKO_SWEET_VOICE_RAND_SITUATION
#FUNCTIONS
#DIMS SITUATION

	VARSET SITUATION

	; 大本のシチュエーション
	SIF COND("調教中")
		SITUATION += "調教中/"
	SIF COND("デート中")
		SITUATION += "デート中/"
	SIF COND("性処理中")
		SITUATION += "性処理中/"
	SIF COND("朝駆け相手") && COND("朝")
		SITUATION += "朝駆け中/"

	; プレイ内容
	IF INSERT("Ｖインサート")
		SITUATION += "Ｖインサート/"
		IF TEQUIP:PLAYER:コンドーム
			SITUATION += "ゴムハメ中/"
		ELSE
			IF COND("危険日")
				SITUATION += "危険日ナマハメ中/"
			ELSE
				SITUATION += "ナマハメ中/"
			ENDIF
		ENDIF
	ENDIF
	SIF INSERT("Ａインサート")
		SITUATION += "Ａインサート/"
	SIF COND("好きな体位中")
		SITUATION += "好きな体位/"
	SIF COND("Ｈないちゃつき中", MASTER)
		SITUATION += "Ｈないちゃつき中/"

	; 服装系
	SIF CHECK_CLO("ハダカ")
		SITUATION += "ハダカ/"
	SIF CHECK_CLO("下着姿")
		SITUATION += "下着姿/"
	SIF CHECK_CLO("トップレス")
		SITUATION += "トップレス/"
	SIF CHECK_CLO("ボトムレス")
		SITUATION += "ボトムレス/"
	SIF CHECK_CLO("ノーパン")
		SITUATION += "ノーパン/"
	SIF CHECK_CLO("ノーブラ")
		SITUATION += "ノーブラ/"
	SIF CHECK_CLO("水着姿")
		SITUATION += "水着姿/"

	; 場所
	IF PLACE("野外")
		SITUATION += "屋外/%SAVESTR:現在位置%/"
	ELSE
		SITUATION += "屋内/%SAVESTR:現在位置%/"
	ENDIF

	; 他情報
	SIF COND("危険日")
		SITUATION += "危険日/"
	SIF MARK:淫紋 == 1
		SITUATION += "淫紋シール/"
	SIF MARK:淫紋 >= 2
		SITUATION += "淫紋/"

	RETURNF SITUATION
