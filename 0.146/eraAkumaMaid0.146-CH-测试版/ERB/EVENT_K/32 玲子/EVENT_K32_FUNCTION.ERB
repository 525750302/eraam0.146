			SIF LOCALS:CNT == ""
				BREAK

			;今回と同じ相手のものかどうか
			IF MEMOS != "" && MEMOS == SUBSTRING(LOCALS:CNT, 0, STRLENS(MEMOS) )
				;相手：量 となっているので"量"部分を抜き出して、今回の数値を加算する
				LOCALS:CNT = %MEMOS%%TOSTR(TOINT(EXTSTR(LOCALS:CNT, "：") ) + SAMEN_VAL)%

				;MEMOSは加算して用済みなので初期化
				MEMOS = 

