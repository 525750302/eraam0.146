;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K32, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "下着"
	CSTR:パンツ = Ｔバック/紫/
	CSTR:ブラ = ハーフカップブラ/紫/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "アクセサリ"
	CSTR:アクセサリ = 

;学園での普段着です。設定必須です
CASE "制服"
	IF COND("秋") + COND("冬")
		CALL SET_COSTUME, "ミニスカブレザー"
	ELSE
		CALL SET_COSTUME, "ミニスカセーラー服"
	ENDIF
	CALL SET_SKIRT, "超ミニスカ"

;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服ブルマ"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "水着"
	CALL SET_COSTUME, "スク水"

;自宅など学園外で着ます。設定必須です
CASE "普段着"
	IF COND("夏") + COND("秋") && RAND:2
		CALL SET_SHIRT, "ジャージ"
		CALL SET_OUTER, "ローライズジーンズ"
		CALL SET_SHOES, "サンダル"
	ELSEIF RAND:2
		CALL SET_SHIRT, "ジャージ"
		CALL SET_OUTER, "ジャージズボン"
		CALL SET_SOCKS, "ソックス"
		CALL SET_SHOES, "サンダル"
	ELSE
		CALL SET_SHIRT, "ブラウス"
		CALL SET_SKIRT, "タイトスカート"
		CALL SET_SOCKS, "ストッキング"
		CALL SET_SHOES, "パンプス"
	ENDIF

;自分の部屋(notあなたの部屋)で着ます
CASE "部屋着"
	IF COND("冬") && PLACE("自宅")
		CALL SET_SHIRT, "どてら"
		CALL SET_OUTER, "ジャージズボン"
	ELSEIF RAND:2
		CALL SET_SHIRT, "ジャージ"
		CALL SET_PANTIES, ""
	ELSE
		CALL SET_SHIRT, "だぼだぼＴシャツ"
		CALL SET_OUTER, "スパッツ"
		CALL SET_PANTIES, ""
		CALL SET_BRA, ""
	ENDIF

;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"

;もちろんデートの際に着ます
CASE "デート衣装"
	SELECTCASE TEXTS("季節")
	CASE "冬"
		CALL SET_SHIRT, "ニットセーター"
		CALL SET_OUTER, "ホットパンツ"
		CALL SET_SOCKS, "ストッキング"
		CALL SET_SHOES, "ブーツ"
	CASE "春"
		CALL SET_SHIRT, "へそ出しタンクトップ"
		CALL SET_OUTER, "ホットパンツ"
		CALL SET_SOCKS, "ニーソックス"
		CALL SET_SHOES, "パンプス"
	CASE "夏"
		IF RAND:2
			CALL SET_SHIRT, "へそ出しタンクトップ"
			CALL SET_OUTER, "ホットパンツ"
			CALL SET_SOCKS, "ニーソックス"
			CALL SET_SHOES, "パンプス"
		ELSE
			CALL SET_SHIRT, "サマードレス"
			CALL SET_SOCKS, "ソックス"
			CALL SET_SHOES, "サンダル"
		ENDIF
	CASEELSE
		IF RAND:3 == 0
			CALL SET_SHIRT, "ニットセーター"
			CALL SET_OUTER, "ホットパンツ"
			CALL SET_SOCKS, "ストッキング"
			CALL SET_SHOES, "ブーツ"
		ELSEIF RAND:2
			CALL SET_SHIRT, "へそ出しタンクトップ"
			CALL SET_OUTER, "ホットパンツ"
			CALL SET_SOCKS, "ニーソックス"
			CALL SET_SHOES, "パンプス"
		ELSE
			CALL SET_SHIRT, "サマードレス"
			CALL SET_SOCKS, "ソックス"
			CALL SET_SHOES, "サンダル"
		ENDIF
	ENDSELECT
	CALL SET_PANTIES, "Ｈな下着"
	CALL SET_BRA, "Ｈなブラ"

ENDSELECT
