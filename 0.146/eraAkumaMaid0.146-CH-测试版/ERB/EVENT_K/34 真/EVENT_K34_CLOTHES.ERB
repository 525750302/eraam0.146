;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K34, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 內褲/淡色/
	CSTR:胸罩 = 文胸/淡色/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "飾品"
	CALL SET_OTHER, "眼鏡"

;学園での普段着です。設定必須です
CASE "制服"
	IF COND("夏")
		CALL SET_COSTUME, "露脐装超短裙西装外衣/緑"
	ELSE
		CALL SET_COSTUME, "西装外衣/緑"
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	IF COND("秋") + COND("冬")
		CALL SET_COSTUME, "体操服运动衫/緑"
	ELSE
		CALL SET_COSTUME, "体操服五分褲/緑"
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "競泳泳装/緑"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	CALL SET_SHIRT, "連帽風衣"
	CALL SET_SKIRT, "裙"
	CALL SET_SOCKS, "短襪"
	CALL SET_SHOES, "小皮靴"

;自分の部屋(notあなたの部屋)で着ます
CASE "居家服"
	IF COND("秋") + COND("冬")
		CALL SET_SHIRT, "連帽風衣"
		CALL SET_SKIRT, "裙"
	ELSE
		CALL SET_SHIRT, "衬衫"
		CALL SET_SKIRT, "裙"
	ENDIF
;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"
	IF COND("秋")
		CALL SET_SHIRT, "連帽風衣"
		CALL SET_SKIRT, "裙"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "小皮靴"
	ELSE
		CALL SET_SHIRT, "衬衫"
		CALL SET_SKIRT, "裙"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "小皮靴"
	ENDIF
	SIF COND("冬")
		CALL SET_OTHER, "围巾/风衣外套"

;もちろんデートの際に着ます
CASE "约会衣装"
	IF COND("秋") + COND("冬")
		CALL SET_SHIRT, "无袖女式衬衫"
		CALL SET_SKIRT, "裙"
		CALL SET_SOCKS, "高筒襪"
		CALL SET_SHOES, "靴"
		CALL SET_OTHER, "围巾/风衣外套"
	ELSE
		CALL SET_SHIRT, "无袖女式衬衫"
		CALL SET_SKIRT, "迷你裙"
		CALL SET_SOCKS, "高筒襪"
		CALL SET_SHOES, "靴"
	ENDIF
ENDSELECT


