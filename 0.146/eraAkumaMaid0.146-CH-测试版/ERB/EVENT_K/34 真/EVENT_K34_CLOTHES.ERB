;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K34, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "下着"
	CSTR:パンツ = ショーツ/おとなしい色/
	CSTR:ブラ = ブラジャー/おとなしい色/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "アクセサリ"
	CALL SET_OTHER, "眼鏡"

;学園での普段着です。設定必須です
CASE "制服"
	IF COND("夏")
		CALL SET_COSTUME, "ミニスカブレザー/緑"
	ELSE
		CALL SET_COSTUME, "ブレザー/緑"
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	IF COND("秋") + COND("冬")
		CALL SET_COSTUME, "体操服ジャージ/緑"
	ELSE
		CALL SET_COSTUME, "体操服ハーフパンツ/緑"
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "水着"
	CALL SET_COSTUME, "競泳水着/緑"

;自宅など学園外で着ます。設定必須です
CASE "普段着"
	CALL SET_SHIRT, "パーカー"
	CALL SET_SKIRT, "スカート"
	CALL SET_SOCKS, "ソックス"
	CALL SET_SHOES, "ローファー"

;自分の部屋(notあなたの部屋)で着ます
CASE "部屋着"
	IF COND("秋") + COND("冬")
		CALL SET_SHIRT, "パーカー"
		CALL SET_SKIRT, "スカート"
	ELSE
		CALL SET_SHIRT, "ワイシャツ"
		CALL SET_SKIRT, "スカート"
	ENDIF
;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"
	IF COND("秋")
		CALL SET_SHIRT, "パーカー"
		CALL SET_SKIRT, "スカート"
		CALL SET_SOCKS, "ソックス"
		CALL SET_SHOES, "ローファー"
	ELSE
		CALL SET_SHIRT, "ワイシャツ"
		CALL SET_SKIRT, "スカート"
		CALL SET_SOCKS, "ソックス"
		CALL SET_SHOES, "ローファー"
	ENDIF
	SIF COND("冬")
		CALL SET_OTHER, "マフラー/トレンチコート"

;もちろんデートの際に着ます
CASE "デート衣装"
	IF COND("秋") + COND("冬")
		CALL SET_SHIRT, "ノースリーブブラウス"
		CALL SET_SKIRT, "スカート"
		CALL SET_SOCKS, "サイハイソックス"
		CALL SET_SHOES, "ブーツ"
		CALL SET_OTHER, "マフラー/トレンチコート"
	ELSE
		CALL SET_SHIRT, "ノースリーブブラウス"
		CALL SET_SKIRT, "ミニスカート"
		CALL SET_SOCKS, "サイハイソックス"
		CALL SET_SHOES, "ブーツ"
	ENDIF
ENDSELECT


