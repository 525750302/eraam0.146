;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K35, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "下着"
	CSTR:パンツ = ショーツ/Ｈな色/
	CSTR:ブラ = ブラジャー/Ｈな色/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "アクセサリ"
	CSTR:アクセサリ = 

;学園での普段着です。設定必須です
CASE "制服"
	IF COND("夏")
		CALL SET_COSTUME, "ミニスカブレザー/赤"
	ELSE
		CALL SET_COSTUME, "ブレザー/赤"
	ENDIF
	CALL SET_OUTER, "パンスト"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	IF COND("秋") + COND("冬")
		CALL SET_COSTUME, "体操服ジャージ/赤"
	ELSE
		CALL SET_COSTUME, "体操服ハイレグブルマ/赤"
	ENDIF

;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "水着"
	CALL SET_COSTUME, "競泳水着/赤"

;自宅など学園外で着ます。設定必須です
CASE "普段着"
	CALL SET_SHIRT, "ワイシャツ"
	CALL SET_SKIRT, "スカート"
	CALL SET_OUTER, "パンスト"
	CALL SET_SHOES, "ローファー"
	CALL SET_PANTIES, "Ｈな下着"
	CALL SET_BRA, "Ｈなブラ"

;自分の部屋(notあなたの部屋)で着ます
CASE "部屋着"
	IF CEVENT("灯服買った")
		CALL SET_SHIRT, "チュニック/紺色"
		CALL SET_SKIRT, "ズボン"
		CALL SET_PANTIES, "レースのパンツ"
		CALL SET_BRA, "レースのブラ"
	ELSEIF COND("秋") + COND("冬")
		CALL SET_SHIRT, "ジャージ"
		CALL SET_PANTIES, "ボクサーパンツ"
		CALL SET_BRA, ""
	ELSE
		CALL SET_SHIRT, "はだけシャツ"
		CALL SET_PANTIES, "ボクサーパンツ"
		CALL SET_BRA, ""
	ENDIF

;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"
	CALL SET_SHIRT, "タートルネック"
	CALL SET_SKIRT, "スカート"
	CALL SET_OUTER, "パンスト"
	CALL SET_SHOES, "ローファー"
	SIF COND("秋") + COND("冬")
		CALL SET_OTHER, "ダッフルコート"

;もちろんデートの際に着ます
CASE "デート衣装"
	IF COND("秋") + COND("冬")
		CALL SET_SHIRT, "ブラウス"
		CALL SET_SKIRT, "コルセットスカート"
		CALL SET_OUTER, "パンスト"
		CALL SET_SHOES, "ショートブーツ"
		CALL SET_OTHER, "ダッフルコート"
		CALL SET_OTHER, "ストール"
	ELSE
		CALL SET_SHIRT, "ブラウス"
		CALL SET_SKIRT, "コルセットスカート"
		CALL SET_OUTER, "パンスト"
		CALL SET_SHOES, "ショートブーツ"
		CALL SET_OTHER, "リボンタイ"
	ENDIF
	CALL SET_PANTIES, "Ｈな下着"
	CALL SET_BRA, "Ｈなブラ"

ENDSELECT


