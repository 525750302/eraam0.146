;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K31, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 低腰胖次/淡色/
	CSTR:胸罩 = 吊帯背心/淡色/
	
;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "飾品"
	CALL SET_OTHER, "吊坠"
;学園での普段着です
CASE "制服"
	CALL SET_SHIRT, "运动衫"
	CALL SET_SKIRT, "格子裙"
	CALL SET_SHOES, "運動鞋"
	IF COND("秋") + COND("冬")
		CALL SET_OUTER, "紧身短褲"
		CALL SET_SOCKS, "長筒襪"
	ELSE
		CALL SET_OUTER, "五分褲"
		CALL SET_SOCKS, "短襪"
	ENDIF

;学園の体育の授業で着ます。この格好のまま部室に現れたりもする
CASE "体操服"
	CALL SET_COSTUME, "体操服运动衫"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅で着ます
CASE "便装"
	IF COND("冬") && PLACE("自宅")
		CALL SET_SHIRT, "褞袍"
		CALL SET_OUTER, "运动衫長褲"
	ELSEIF (COND("秋") || COND("冬")) && COND("夜")
		CALL SET_SHIRT, "前開連帽風衣/灰色"
		CALL SET_OUTER, "热褲"
		CALL SET_SOCKS, "長筒襪"
	ELSEIF (COND("夏") || RAND:2) && CFLAG:シルシ <= 1
		CALL SET_SHIRT, "吊帯背心"
		CALL SET_OUTER, "热褲"
	ELSE
		IF RAND:2 && TALENT:恋慕 && CFLAG:シルシ <= 1
			CALL SET_SHIRT, "露肩外衣"
			CALL SET_OUTER, "热褲"
			CALL SET_SOCKS, "長筒襪"
		ELSE
			CALL SET_SHIRT, "怪图案Ｔ恤"
			CALL SET_OUTER, "热褲"
			CALL SET_SOCKS, "短襪"
		ENDIF
	ENDIF

;自分の部屋(notあなたの部屋)で着ます
CASE "居家服"
	IF COND("冬") && PLACE("自宅")
		CALL SET_SHIRT, "連帽風衣/灰色"
		CALL SET_OUTER, "热褲"
	ELSEIF COND("夏") && COND("夜") == 0
		CALL SET_SHIRT, ""
		CALL SET_OTHER, "前開連帽風衣/灰色"
		CALL SET_BRA, ""
	ELSE
		CALL SET_SHIRT, "吊帯背心"
		CALL SET_OUTER, "热褲"	
	ENDIF
;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"
	CALL SET_SHIRT, "前開連帽風衣/灰色"
	CALL SET_OUTER, "热褲"
	IF COND("冬") || COND("秋")
		CALL SET_SOCKS, "長筒襪"
	ELSE
		CALL SET_SOCKS, "短襪"
	ENDIF	
	CALL SET_SHOES, "運動鞋"
;もちろんデートの際に着ます
CASE "约会衣装"
	IF TALENT:恋慕
		IF COND("冬")
			CALL SET_SHIRT, "前開連帽風衣/灰色"
			CALL SET_OUTER, "热褲"
			CALL SET_SOCKS, "長筒襪"
			CALL SET_SHOES, "運動鞋"
		ELSE
			;75％変Ｔ
			IF RAND:4
				CALL SET_SHIRT, "怪图案Ｔ恤"
				CALL SET_OUTER, "热褲"
				CALL SET_SOCKS, "短襪"
				CALL SET_SHOES, "運動鞋"
			ELSEIF RAND:3
				CALL SET_SHIRT, "露肩外衣"
				CALL SET_OUTER, "热褲"
				CALL SET_SOCKS, "長筒襪"
				CALL SET_SHOES, "運動鞋"
			ELSE
				CALL SET_SHIRT, "夏日礼服/黒"
				CALL SET_SHOES, "无后跟鞋"
				CALL SET_OTHER, "妇人礼帽"
			ENDIF
		ENDIF
	ELSE
		CALL SET_SHIRT, "怪图案Ｔ恤"
		CALL SET_OUTER, "热褲"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "運動鞋"
	ENDIF
ENDSELECT

;変な柄処理
IF CHECK_SHIRT("変な柄")
	IF RAND:4 == 0
		CSTR:服 += @"柄：＼（^o^）／/ＡＡ/"
	ELSE
		CSTR:服 += @"柄：%TEXTR("週休七日/猫じゃらせない/果報は寝て待て/恋人ではありません/三食午睡付き/逃走本能/朝三暮四/三寒四温/一日三食")%/"
	ENDIF
ENDIF

;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;-------------------------------------------------
@MAIDFACE_K31
IF CHECK_SHIRT("オフショル")
	CSTR:改髪 = 麻花辫	
ELSEIF PLACE("自宅")
	CSTR:改髪 = 马尾辫
ELSE
	CALL SETFLAG, "普段の髪型復元", TARGET
ENDIF
