;-------------------------------------------------
;メイン画面で選択肢として独立している日常イベントでのセリフ。WAIT使って大丈夫です
;こっちはあくまで選択肢で選ばれた場合に限るのに注意。
;-------------------------------------------------
@KOJO_DAILYCOM_K4, ARGS
;挨拶
#DIMS GREETING


SELECTCASE ARGS
CASE "帰り道"
	;SAVESTR:現在位置 と SAVESTR:帰り道の行動 を決定する
	CALL SETFLAG, "遭遇地点"
	;地の文を出す
	CALL DAILY_MESSAGE, "帰り道"
;[999]選択後の台詞。TFLAG:ベッドイン = 1とすることで強制的にエロにも行ける
CASE "休憩"
	IF PLACE("自宅")
		IF COND("夜")

		ELSE

		ENDIF
	;ここは実質昼のみ
	ELSEIF PLACE("部室")

	;場所移動後
	ELSE

	ENDIF
;ここには特殊な条件でのキャラ独自のイベントを書く。別に無くても構わない
;発生タイミングは日常イベント選択後の好感度を得た直後
CASE "特殊イベント"
	;眠ってる時でも来るので書くことないならRETURN 0してください
	SIF CFLAG:睡眠
		RETURN 0
;これは昼か夜
CASE "挨拶する"
	IF COND("夜")
		GREETING = こんばんは
	ELSEIF COND("昼")
		GREETING = こんにちは
	ELSE
		GREETING = おはよう
	ENDIF
	;あなたに先に挨拶をされた
	IF CFLAG:挨拶した == 0
		PRINTFORMW 
	ELSE
		PRINTFORMW 
	ENDIF
CASE "起こす"
	PRINTFORMW 
CASE "トーク"
	SELECTCASE STR:日常イベント名
	CASE "褒める"
		PRINTFORMW 「よくできました、相手を褒める事で自分の事をどう思っているかが分かるの」
		PRINTFORMW 「お世辞かどうかを見分けることも重要ね」
	CASE "甘い言葉"
		IF TALENT:恋慕
			PRINTFORMW 「本気にさせられるなんて、予想外もいい所ね」
			PRINTFORMW  %CALLNAME:TARGET%は苦笑しつつも喜んでいることが分かる
		ELSEIF CALCF("甘い言葉成功")
			PRINTFORMW 
		ELSE
			PRINTFORMW 「じとー」
			PRINTFORMW  どうやら失敗したらしい
		ENDIF
	CASEELSE
		IF RAND:3 == 0
			PRINTFORMW 
		ELSEIF RAND:2
			PRINTFORMW 
		ELSE
			PRINTFORMW 
		ENDIF
	ENDSELECT

CASE "汗を拭く"
	PRINTFORMW 「ありがと、ついでにちょっとさわってみる？」
;睡眠中の悪戯
CASE "寝込みを襲う"
	;寝言
	CALL KOJO_SLEEP_K4
	WAIT
CASE "もてなす"
	SELECTCASE STR:日常イベント名
	CASE "おっぱいリフトする"
		PRINTFORMW 
	CASE "マッサージする"
		PRINTFORMW 「ありがとう、大きいと肩が凝るのよ」
	CASE "キスする"
		IF CSTR:PREV_DAILYCOM == STR:日常イベント名
			PRINTFORMW 
		ELSE
			PRINTFORMW 
		ENDIF
	CASE "膝枕する"
		PRINTFORMW 
	CASE "お茶を淹れる"
		PRINTFORMW 「あら、気が利くわね」
	CASEELSE
		PRINTFORMW 
	ENDSELECT
CASE "寝姿を整える"
	;寝言
	CALL KOJO_SLEEP_K4
	WAIT
CASE "隙を見せる"
	SELECTCASE STR:日常イベント名
	CASE "Ｈのお誘い", "パンツ見せ"
		PRINTFORMW 
	CASE "押し倒し"
		PRINTFORMW 
	CASE "口淫"
		PRINTFORMW 
	CASE "頬キス", "キス"
		PRINTFORMW 
	CASE "膝を枕にしてくる", "抱きつき", "おっぱい押し付け", "股間擦り付け"
		PRINTFORMW 
	CASE "なでなで", "手淫"
		PRINTFORMW 
	CASE "膝枕"
		PRINTFORMW 
	CASE "お茶汲み"
		PRINTFORMW 
	;それ以外
	CASEELSE
		IF RAND:2
			PRINTFORMW 
		ELSE
			PRINTFORMW 
		ENDIF
	ENDSELECT
CASE "トイレ"
	;トイレで用を済ませた後の台詞
	IF BASE:尿意 == 0
		;主人もトイレで済ませてきた
		IF BASE:MASTER:尿意 == 0
			PRINTFORMW 
		ELSE
			PRINTFORMW 
		ENDIF
	;トイレに行く際の台詞
	ELSE
		PRINTFORMW 「少し席を外すわね」
	ENDIF
CASE "トイレ詮索"
	;初回
	IF DEVENT(ARGS) == 0
		PRINTFORMW 「いい？トイレに行く事を男性はキジ撃ち、女の子はお花摘みというのよ」
		PRINTFORMW %CALLNAME:TARGET%は%CALLNAME:MASTER%を教育している……
	ELSE
		PRINTFORMW 「野暮な事を聞かないの、ビンタが飛ぶわよ？」
		PRINTFORMW %CALLNAME:TARGET%は呆れている
	ENDIF
CASE "アソコチェック"
	;睡眠中の悪戯
	IF CFLAG:睡眠
		;寝言
		CALL KOJO_SLEEP_K4
		WAIT
	ELSEIF COND("合意：アソコチェック") == 0
		;拒否されたのに連続実行
		IF CSTR:PREV_DAILYCOM == STR:日常イベント名
			PRINTFORMW 
		ELSE
			PRINTFORMW 
		ENDIF
	ELSE
		PRINTFORMW 
	ENDIF
CASE "パンツチェック"
	;睡眠中の悪戯
	IF CFLAG:睡眠
		;寝言
		CALL KOJO_SLEEP_K4
		WAIT
	;連続実行
	ELSEIF CSTR:PREV_DAILYCOM == STR:日常イベント名
		PRINTFORMW 
	ELSE
		PRINTFORMW 
	ENDIF
CASE "ブルマチェック", "股間観察"
	;睡眠中の悪戯
	IF CFLAG:睡眠
		;寝言
		CALL KOJO_SLEEP_K4
		WAIT
	ELSEIF CFLAG:股間確認済 && RAND:2
		PRINTFORMW 
	;上機嫌
	ELSEIF CFLAG:褒める
		PRINTFORMW 
	ELSE
		PRINTFORMW 
	ENDIF
CASE "スカートをめくる"
	SELECTCASE STR:日常イベント名
	CASE "スカートたくし上げ"
		;パンチラ直後
		IF COND("パンチラ直後")
			PRINTFORMW 
		ELSE
			PRINTFORMW 
		ENDIF
	;スカートをめくる
	CASEELSE
		;寝起きの胡乱な状態を襲う
		IF CFLAG:寝起き
			PRINTFORMW 
		;睡眠中の悪戯
		ELSEIF CFLAG:睡眠
			;寝言
			CALL KOJO_SLEEP_K4
			WAIT
		;パンチラ直後
		ELSEIF COND("パンチラ直後")
			PRINTFORMW 
		ELSE
			IF COND("挨拶前")
				PRINTFORMW 
			ELSE
				;パンツはいてない
				IF EQUIP:パンツ == 0
					PRINTFORMW 
				ELSE
					PRINTFORMW 
				ENDIF
			ENDIF
		ENDIF
	ENDSELECT
ENDSELECT



