;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K52, ARGS

SELECTCASE ARGS
;キャラクター独自の下着の組み合わせを設定できます。設定必須です。一定の確率で着用します。
;もしも普段は付けない、という事ならCSTR:パンツ = と等号の右側を書き込まない事で出来ます。
CASE "下着"

	IF CFLAG:エッチな下着着用 == 1
		IF RAND:11 == 0
			CSTR:パンツ = Ｔバック/Ｈな色/
		ELSEIF RAND:10 == 0
			CSTR:パンツ = Ｔバック/Ｈな色/紐/
		ELSEIF RAND:9 == 0
			CSTR:パンツ = Ｔバック/Ｈな色/Ｔバック/マイクロ/
		ELSEIF RAND:8 == 0
			CSTR:パンツ = マイクロショーツ/Ｈな色/Ｔバック/マイクロ/
		ELSEIF RAND:7 == 0
			CSTR:パンツ = レースのパンツ/Ｈな色/Ｔバック/シースルー/
		ELSEIF RAND:6 == 0
			CSTR:パンツ = レースのパンツ/Ｈな色/Ｔバック/シースルー/マイクロ/
		ELSEIF RAND:5 == 0
			CSTR:パンツ = レースのパンツ/Ｈな色/Ｔバック/シースルー/紐/
		ELSEIF RAND:4 == 0
			CSTR:パンツ = 紐パン/Ｈな色/Ｔバック/
		ELSEIF RAND:3 == 0
			CSTR:パンツ = 紐パン/Ｈな色/Ｔバック/シースルー/
		ELSEIF RAND:2 == 0
			CSTR:パンツ = 紐パン/Ｈな色/Ｔバック/マイクロ/
		ENDIF
		IF RAND:3 == 0
			CSTR:ブラ = ３／４カップブラ/Ｈな色/
		ELSEIF RAND:2 == 0
			CSTR:ブラ = ハーフカップブラ/Ｈな色/
		ELSE
			CSTR:ブラ = レースのブラ/Ｈな色/シースルー/
		ENDIF
	ELSE
		CSTR:パンツ = ショーツ/Ｈな色/シンプル/
		CSTR:ブラ = シンプルブラ/Ｈな色/
	ENDIF


;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "アクセサリ"
	CALL SET_OTHER, "眼鏡"

;学園での普段着です。設定必須です。
;セーラー服, ミニスカセーラー服, ブレザー, ミニスカブレザー, アメスクなど
CASE "制服"
	IF RAND:2 == 0
		CALL SET_COSTUME, "リボンタイブラウス"
	ELSE
		IF COND("夏")
			CALL SET_SHIRT, "ノースリーブブラウス"
		ELSE
			CALL SET_SHIRT, "ルーズブラウス"
		ENDIF
		CALL SET_SKIRT, "タイトスカート"
		IF COND("秋") || COND("冬")
			CALL SET_OUTER, "パンスト"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "ストッキング"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "網ストッキング"
			ELSE
				CALL SET_SOCKS, "ガーターストッキング"
			ENDIF
		ENDIF
		CALL SET_SHOES, "ハイヒール"
		IF RAND:2 == 0
			CALL SET_OTHER, "リボンタイ"
		ELSE
			CALL SET_OTHER, "フリルタイ"
		ENDIF
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;体操服ブルマ, 体操服ハイレグブルマ, 体操服ハーフパンツ, 体操服スパッツ, 体操服ジャージなど
CASE "体操服"
	IF RAND:2 == 0
		CALL SET_COSTUME, "リボンタイブラウス"
	ELSE
		IF COND("夏")
			CALL SET_SHIRT, "ノースリーブブラウス"
		ELSE
			CALL SET_SHIRT, "ルーズブラウス"
		ENDIF
		CALL SET_SKIRT, "タイトスカート"
		IF COND("秋") || COND("冬")
			CALL SET_OUTER, "パンスト"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "ストッキング"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "網ストッキング"
			ELSE
				CALL SET_SOCKS, "ガーターストッキング"
			ENDIF
		ENDIF
		CALL SET_SHOES, "ハイヒール"
		IF RAND:2 == 0
			CALL SET_OTHER, "リボンタイ"
		ELSE
			CALL SET_OTHER, "フリルタイ"
		ENDIF
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;スク水, 競泳水着, 白ビキニ, 黒ビキニなど
CASE "水着"
	IF RAND:2 == 0
		CALL SET_COSTUME, "リボンタイブラウス"
	ELSE
		IF COND("夏")
			CALL SET_SHIRT, "ノースリーブブラウス"
		ELSE
			CALL SET_SHIRT, "ルーズブラウス"
		ENDIF
		CALL SET_SKIRT, "タイトスカート"
		IF COND("秋") || COND("冬")
			CALL SET_OUTER, "パンスト"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "ストッキング"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "網ストッキング"
			ELSE
				CALL SET_SOCKS, "ガーターストッキング"
			ENDIF
		ENDIF
		CALL SET_SHOES, "ハイヒール"
		IF RAND:2 == 0
			CALL SET_OTHER, "リボンタイ"
		ELSE
			CALL SET_OTHER, "フリルタイ"
		ENDIF
	ENDIF

;自宅など学園外で着ます。設定必須です
CASE "普段着"
	IF RAND:2 == 0
		CALL SET_COSTUME, "リボンタイブラウス"
	ELSE
		IF COND("夏")
			CALL SET_SHIRT, "ノースリーブブラウス"
		ELSE
			CALL SET_SHIRT, "ルーズブラウス"
		ENDIF
		CALL SET_SKIRT, "タイトスカート"
		IF COND("秋") || COND("冬")
			CALL SET_OUTER, "パンスト"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "ストッキング"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "網ストッキング"
			ELSE
				CALL SET_SOCKS, "ガーターストッキング"
			ENDIF
		ENDIF
		CALL SET_SHOES, "ハイヒール"
		IF RAND:2 == 0
			CALL SET_OTHER, "リボンタイ"
		ELSE
			CALL SET_OTHER, "フリルタイ"
		ENDIF
	ENDIF
;自分の部屋(notあなたの部屋)で着ます
CASE "部屋着"
	IF COND("春") || COND("夏") || COND("秋")
		IF RAND:2 == 0
			CALL SET_SHIRT, "バックリボンカットソー"
		ELSE
			CALL SET_SHIRT, "カットソー"
		ENDIF
	ELSEIF COND("冬")
		IF RAND:2 == 0
			CALL SET_SHIRT, "二ットセーター"
		ELSE
			CALL SET_SHIRT, "萌え袖セーター"
		ENDIF
	ENDIF
	CALL SET_SKIRT, "ミニスカート"
	IF COND("秋") || COND("冬")
		CALL SET_OUTER, "パンスト"
	ELSE
		CALL SET_SOCKS, "ストッキング"
	ENDIF
	IF COND("冬")
		IF RAND:2 == 0
			CALL SET_SHOES, "ロングブーツ"
		ELSE
			CALL SET_SHOES, "ブーティ"
		ENDIF
	ELSE
		IF RAND:4 == 0
			CALL SET_SHOES, "パンプス"
		ELSEIF RAND:3 == 0
			CALL SET_SHOES, "ミュール"
		ELSEIF RAND:2 == 0
			CALL SET_SHOES, "サンダル"
		ELSE
			CALL SET_SHOES, "ハイヒール"
		ENDIF
	ENDIF
;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"
	IF COND("夜") || TEXTS("曜日") == "土" || TEXTS("曜日") == "日"
		IF COND("春") || COND("夏") || COND("秋")
			IF COND("夏") && RAND:3 == 0
				CALL SET_SHIRT, "サマードレス"
			ELSEIF RAND:2 == 0
				CALL SET_SHIRT, "バックリボンカットソー"
			ELSE
				CALL SET_SHIRT, "カットソー"
			ENDIF
		ELSEIF COND("冬")
			IF RAND:3 == 0
				CALL SET_SHIRT, "リボン付きオフショル"
			ELSEIF RAND:3 == 0
				CALL SET_SHIRT, "二ットオフショル"
			ENDIF
		ENDIF
		CALL SET_SKIRT, "ミニスカート"
		IF COND("秋") || COND("冬")
			CALL SET_OUTER, "パンスト"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "ストッキング"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "ニーソックス"
			ELSE
				CALL SET_SOCKS, "サイハイソックス"
			ENDIF
		ENDIF
		IF COND("冬")
			IF RAND:2 == 0
				CALL SET_SHOES, "ロングブーツ"
			ELSE
				CALL SET_SHOES, "ブーティ"
			ENDIF
		ELSE
			IF RAND:3 == 0
				CALL SET_SHOES, "パンプス"
			ELSEIF RAND:2 == 0
				CALL SET_SHOES, "ミュール"
			ELSE
				CALL SET_SHOES, "ハイヒール"
			ENDIF
		ENDIF
		IF COND("冬")
			CALL SET_OTHER, "トレンチコート"
		ENDIF
	ELSEIF RAND:2 == 0
		CALL SET_COSTUME, "リボンタイブラウス"
		IF COND("冬")
			CALL SET_SHOES, "ブーティ"
		ELSE
			CALL SET_SHOES, "ハイヒール"
		ENDIF
		IF COND("冬")
			CALL SET_OTHER, "トレンチコート"
		ENDIF
	ELSE
		IF COND("夏")
			CALL SET_SHIRT, "ノースリーブブラウス"
		ELSE
			CALL SET_SHIRT, "ルーズブラウス"
		ENDIF
		CALL SET_SKIRT, "タイトスカート"
		IF COND("秋") || COND("冬")
			CALL SET_OUTER, "パンスト"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "ストッキング"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "網ストッキング"
			ELSE
				CALL SET_SOCKS, "ガーターストッキング"
			ENDIF
		ENDIF
		IF COND("冬")
			CALL SET_SHOES, "ブーティ"
		ELSE
			CALL SET_SHOES, "ハイヒール"
		ENDIF
		IF RAND:2 == 0
			CALL SET_OTHER, "リボンタイ"
		ELSE
			CALL SET_OTHER, "フリルタイ"
		ENDIF
		IF COND("冬")
			CALL SET_OTHER, "トレンチコート"
		ENDIF
	ENDIF
	IF RAND:2 == 0 && TALENT:淫乱
		IF RAND:2 == 0
			CSTR:ブラ = シェルフブラ/Ｈな色/乳首露出/乳房露出/
		ELSE
			CSTR:ブラ = オープンブラ/Ｈな色/乳首露出/
		ENDIF
	ELSE
		IF RAND:3 == 0
			CSTR:ブラ = ３／４カップブラ/Ｈな色/
		ELSEIF RAND:2 == 0
			CSTR:ブラ = ハーフカップブラ/Ｈな色/
		ELSE
			CSTR:ブラ = レースのブラ/Ｈな色/シースルー/
		ENDIF
	ENDIF
	IF RAND:11 == 0
		CSTR:パンツ = Ｔバック/Ｈな色/
	ELSEIF RAND:10 == 0
		CSTR:パンツ = Ｔバック/Ｈな色/紐/
	ELSEIF RAND:9 == 0
		CSTR:パンツ = Ｔバック/Ｈな色/Ｔバック/マイクロ/
	ELSEIF RAND:8 == 0
		CSTR:パンツ = マイクロショーツ/Ｈな色/Ｔバック/マイクロ/
	ELSEIF RAND:7 == 0
		CSTR:パンツ = レースのパンツ/Ｈな色/Ｔバック/シースルー/
	ELSEIF RAND:6 == 0
		CSTR:パンツ = レースのパンツ/Ｈな色/Ｔバック/シースルー/マイクロ/
	ELSEIF RAND:5 == 0
		CSTR:パンツ = レースのパンツ/Ｈな色/Ｔバック/シースルー/紐/
	ELSEIF RAND:4 == 0
		CSTR:パンツ = 紐パン/Ｈな色/Ｔバック/
	ELSEIF RAND:3 == 0
		CSTR:パンツ = 紐パン/Ｈな色/Ｔバック/シースルー/
	ELSEIF RAND:2 == 0
		CSTR:パンツ = 紐パン/Ｈな色/Ｔバック/マイクロ/
	ENDIF

;もちろんデートの際に着ます
CASE "デート衣装"
	IF COND("春") || COND("夏") || COND("秋")
		IF COND("夏") && RAND:3 == 0
				CALL SET_SHIRT, "サマードレス"
		ELSEIF RAND:2 == 0
			CALL SET_SHIRT, "バックリボンカットソー"
		ELSE
			CALL SET_SHIRT, "カットソー"
		ENDIF
	ELSEIF COND("冬")
		IF RAND:3 == 0
			CALL SET_SHIRT, "リボン付きオフショル"
		ELSEIF RAND:3 == 0
			CALL SET_SHIRT, "二ットオフショル"
		ENDIF
	ENDIF
	CALL SET_SKIRT, "ミニスカート"
	IF COND("秋") || COND("冬")
		CALL SET_OUTER, "パンスト"
	ELSE
		CALL SET_SOCKS, "ストッキング"
	ENDIF
	IF COND("冬")
		IF RAND:2 == 0
			CALL SET_SHOES, "ロングブーツ"
		ELSE
			CALL SET_SHOES, "ブーティ"
		ENDIF
	ELSE
		IF RAND:3 == 0
			CALL SET_SHOES, "パンプス"
		ELSEIF RAND:2 == 0
			CALL SET_SHOES, "ミュール"
		ELSE
			CALL SET_SHOES, "ハイヒール"
		ENDIF
	ENDIF
	IF COND("冬")
		CALL SET_OTHER, "トレンチコート"
	ENDIF

ENDSELECT


