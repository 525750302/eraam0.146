CASE "水着"
	CALL SET_COSTUME, "白ビキニ"

;自宅など学園外で着ます。設定必須です
CASE "普段着"
	SELECTCASE TEXTS("季節")
	CASE "冬"
		IF RAND:2
			CALL SET_SHIRT, "ニットセーター"
			CALL SET_SKIRT, "ロングスカート"
			CALL SET_SOCKS, "ストッキング"
			CALL SET_SHOES, "ブーツ"
			CALL SET_PANTIES, "フリルのパンツ"
			CALL SET_BRA, "フリルのブラ"
		ELSE
			CALL SET_SHIRT, "胸開きタートルネック"
			CALL SET_SKIRT, "スリットロングスカート"
			CALL SET_SOCKS, "ニーソックス"
			CALL SET_PANTIES, "ショーツ"
			CALL SET_BRA, "シンプルブラ"
		ENDIF
	CASE "夏"
		CALL SET_SHIRT, "ノースリーブブラウス"
		CALL SET_SKIRT, "ミニスカート"
		CALL SET_SOCKS, "ニーソックス"
		CALL SET_SHOES, "ローファー"
