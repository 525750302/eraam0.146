@CLOTHES_K37, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "下着"
	CSTR:パンツ = レースのパンツ/純白/
	CSTR:ブラ = レースのブラ/純白/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "アクセサリ"
	CSTR:アクセサリ = 

;学園での普段着です。設定必須です
CASE "制服"
	IF COND("夏")
		CALL SET_COSTUME, "ミニスカブレザー"
	ELSE
		CALL SET_COSTUME, "ブレザー"
	ENDIF

	CALL SET_COSTUME, ""
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
