		CALL SET_BRA, "レースのブラ"
	CASEELSE
		IF COND("秋") && RAND:3 == 0
			CALL SET_SHIRT, "胸開きタートルネック"
			CALL SET_SKIRT, "スリットロングスカート"
			CALL SET_SOCKS, "ニーソックス"
			CALL SET_PANTIES, "ショーツ"
			CALL SET_BRA, "シンプルブラ"
		ELSEIF RAND:2
			CALL SET_SHIRT, "フリルブラウス"
			CALL SET_SKIRT, "ミニスカート"
			CALL SET_SOCKS, "ニーソックス"
			CALL SET_SHOES, "ローファー"
			CALL SET_PANTIES, "縞々パンツ"
			CALL SET_BRA, "縞々ブラ"
		ELSE
			CALL SET_SHIRT, "ジャージ"
			CALL SET_OUTER, "ジャージズボン"
			CALL SET_PANTIES, "ショーツ"
			CALL SET_BRA, ""
		ENDIF
	ENDSELECT
;自分の部屋(notあなたの部屋)で着ます
CASE "部屋着"
	IF COND("夏")
		CALL SET_SHIRT, "はだけシャツ"
