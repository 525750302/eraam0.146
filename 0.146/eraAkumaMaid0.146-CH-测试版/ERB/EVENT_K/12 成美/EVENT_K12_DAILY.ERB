	CALL SETFLAG, "遭遇地点"
	;地の文を出す
	CALL DAILY_MESSAGE, "帰り道"
;[999]選択後の台詞。TFLAG:ベッドイン = 1とすることで強制的にエロにも行ける
CASE "休憩"
	IF PLACE("自宅")
		IF COND("夜")

		ELSE

		ENDIF
	;ここは実質昼のみ
	ELSEIF PLACE("部室")

