			PRINTFORMW 
		ELSEIF RAND:2
			PRINTFORMW 
		ELSE
			PRINTFORMW 
		ENDIF
	ENDSELECT

CASE "汗を拭く"
	PRINTFORMW 
;睡眠中の悪戯
CASE "寝込みを襲う"
	;寝言
	CALL KOJO_SLEEP_K12
	WAIT
CASE "もてなす"
	SELECTCASE STR:日常イベント名
	CASE "おっぱいリフトする"
		PRINTFORMW 
	CASE "マッサージする"
		PRINTFORMW 
	CASE "キスする"
		IF CSTR:PREV_DAILYCOM == STR:日常イベント名
			PRINTFORMW 
		ELSE
			PRINTFORMW 
		ENDIF
	CASE "膝枕する"
		PRINTFORMW 
	CASE "お茶を淹れる"
		PRINTFORMW 
	CASEELSE
		PRINTFORMW 
	ENDSELECT
CASE "寝姿を整える"
	;寝言
	CALL KOJO_SLEEP_K12
	WAIT
CASE "隙を見せる"
	SELECTCASE STR:日常イベント名
	CASE "Ｈのお誘い", "パンツ見せ"
		PRINTFORMW 
	CASE "押し倒し"
		PRINTFORMW 
	CASE "口淫"
		PRINTFORMW 
	CASE "頬キス", "キス"
		PRINTFORMW 
