		;寝言
		CALL KOJO_SLEEP_K12
		WAIT
	ELSEIF CFLAG:股間確認済 && RAND:2
		PRINTFORMW 
	;上機嫌
	ELSEIF CFLAG:褒める
		PRINTFORMW 
	ELSE
		PRINTFORMW 
	ENDIF
CASE "スカートをめくる"
	SELECTCASE STR:日常イベント名
	CASE "スカートたくし上げ"
		;パンチラ直後
		IF COND("パンチラ直後")
			PRINTFORMW 
		ELSE
			PRINTFORMW 
		ENDIF
	;スカートをめくる
	CASEELSE
		;寝起きの胡乱な状態を襲う
		IF CFLAG:寝起き
			PRINTFORMW 
		;睡眠中の悪戯
		ELSEIF CFLAG:睡眠
			;寝言
			CALL KOJO_SLEEP_K12
			WAIT
		;パンチラ直後
		ELSEIF COND("パンチラ直後")
			PRINTFORMW 
		ELSE
			IF COND("挨拶前")
				PRINTFORMW 
			ELSE
				;パンツはいてない
				IF EQUIP:パンツ == 0
					PRINTFORMW 
				ELSE
					PRINTFORMW 
				ENDIF
