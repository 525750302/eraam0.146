;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K2, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "下着"
	CSTR:パンツ = 紐パン/黒/
	CSTR:ブラ = キャミソール/黒/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "アクセサリ"

;学園での普段着です
CASE "制服"
	CALL SET_COSTUME, "セーラー服"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする
CASE "体操服"
	IF COND("夏") && ABL:露出癖 >= 3
		CALL SET_COSTUME, "体操服ハイレグブルマ"
	ELSE
		CALL SET_COSTUME, "体操服ブルマ"
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする
CASE "水着"
	CALL SET_COSTUME, "黒ビキニ"

;自宅で着ます
CASE "普段着"
	CALL SET_COSTUME, "セーラー服"

;自分の部屋(notあなたの部屋)で着ます
CASE "部屋着"
	CALL SET_COSTUME, "セーラー服"
	SELECTCASE TEXTS("季節")
	CASE "春", "秋"
		CALL SETFLAG, "パンツが見える格好になる", TARGET
	CASE "夏"
		CALL SETFLAG, "下着姿になる", TARGET
	ENDSELECT
;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"

;もちろんデートの際に着ます
CASE "デート衣装"

ENDSELECT

