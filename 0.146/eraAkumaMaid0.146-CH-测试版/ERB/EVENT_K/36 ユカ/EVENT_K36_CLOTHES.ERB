;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K36, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "下着"
	CSTR:パンツ = 縞々パンツ/縞々色/
	CSTR:ブラ = 縞々のブラ/縞々色/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "アクセサリ"
	CSTR:アクセサリ = 

;学園での普段着です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "セーラー服"
	CALL SET_OUTER, "スパッツ"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	IF COND("秋") + COND("冬")
		CALL SET_COSTUME, "体操服ジャージ"
	ELSE
		CALL SET_COSTUME, "体操服ハーフパンツ"
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "水着"
	CALL SET_COSTUME, "スク水"

;自宅など学園外で着ます。設定必須です
CASE "普段着"
	;普段は中学生男子みたいな服を着てる。
	IF COND("冬")
		IF RAND:2
			CALL SET_SHIRT, "ニットセーター"
			CALL SET_OUTER, "ズボン"
			CALL SET_SOCKS, "ハイソックス"
			CALL SET_SHOES, "スニーカー"
		ELSE
			CALL SET_SHIRT, "ジャージ"
			CALL SET_OUTER, "ジャージズボン"
			CALL SET_SOCKS, "ソックス"
			CALL SET_SHOES, "スニーカー"
		ENDIF
	ELSEIF COND("夏")
		IF RAND:2
			CALL SET_SHIRT, "Ｔシャツ"
			CALL SET_OUTER, "ショートパンツ"
			CALL SET_SOCKS, "ソックス"
			CALL SET_SHOES, "スニーカー"
		ELSE
			CALL SET_SHIRT, "ノースリーブブラウス"
			CALL SET_OUTER, "ショートパンツ"
			CALL SET_SOCKS, "ソックス"
			CALL SET_SHOES, "スニーカー"
		ENDIF
	ELSE
		CALL SET_SHIRT, "パーカー"
		CALL SET_SKIRT, "スカート"
		CALL SET_OUTER, "ハーフパンツ"
		CALL SET_SOCKS, "ソックス"
		CALL SET_SHOES, "スニーカー"
	ENDIF

;自分の部屋(notあなたの部屋)で着ます
CASE "部屋着"
	IF TALENT:恋慕 && COND("欲求不満") >= 2
		CALL SET_SHIRT, "だぼだぼＴシャツ"
		CALL SET_SOCKS, "ニーソックス"
		CALL SET_PANTIES, ""
		CALL SET_BRA, ""
	ENDIF

;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"

;もちろんデートの際に着ます
CASE "デート衣装"
	SELECTCASE TEXTS("季節")
	CASE "冬"
		CALL SET_SHIRT, "ショートコート"
		CALL SET_OUTER, "ズボン"
		CALL SET_SOCKS, "ソックス"
		CALL SET_SHOES, "スニーカー"
	CASE "秋"
		CALL SET_SHIRT, "ニットオフショル"
		CALL SET_OUTER, "ショートパンツ"
		CALL SET_SOCKS, "ソックス"
		CALL SET_SHOES, "スニーカー"
	CASE "夏"
		CALL SET_SHIRT, "ノースリーブブラウス"
		CALL SET_OUTER, "ショートパンツ"
		CALL SET_SOCKS, "ソックス"
		CALL SET_SHOES, "スニーカー"
	CASEELSE
		CALL SET_SHIRT, "ブラウス"
		CALL SET_OUTER, "ショートパンツ"
		CALL SET_SOCKS, "ソックス"
		CALL SET_SHOES, "スニーカー"
	ENDSELECT

ENDSELECT


