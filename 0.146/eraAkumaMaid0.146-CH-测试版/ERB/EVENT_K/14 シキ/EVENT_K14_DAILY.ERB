	[IF_DEBUG]
		PRINTFORML KOJO_DAILY_K14, %CSTR:PREV_DAILYCOM%後
	[ENDIF]
CASE "ローライズヒップ"
	PRINTFORML 
CASE "スカートをめくる"
	IF COND("合意：スカートめくり") == 0
		SELECTCASE RAND:3
