		ELSEIF TALENT:恋慕
			PRINTFORML 「嗯……啊～……%CNAME("二人称")%吗」
			PRINTFORML 「哈……做了个噩梦………」
		ELSE
			PRINTFORML 「嗯……啊啊……」
			PRINTFORML 「……哈……起床了就回来了吗？」
		ENDIF
	ENDSELECT
	
CASE "コスプレ中"
	SELECTCASE RAND:3
	CASE 0
		PRINTFORML 「为什么%CNAME("一人称")%会变成这样……」
		PRINTFORML 「%CNAME("二人称", "どもり")%……%TEXTR("喂，想打你！/可以打你吗？/我要打爆你的头！")%」
	CASE 1
		PRINTFORML 「为什么%CNAME("一人称")%穿成这样……」
		PRINTFORML 「喂，喂！？ %TEXTR("禁止拍照/不要拍视频")%！！」
	CASEELSE
		PRINTFORML 「……」
		PRINTFORML 「%CNAME("一人称")%的尊严正在消失……」
	ENDSELECT

;眠っている
CASE "睡眠"
	;寝言
	CALL KOJO_SLEEP_K14
	;寝言用の汎用地の文呼出
	CALL DAILY_MESSAGE, "寝言"
ENDSELECT

;何か発言してたらここまで
SIF LINECOUNT > MEMO_LINECOUNT
	RETURN 1

;前回コマンド対応台詞
SELECTCASE CONDS("直前行動")
CASE "愛の告白"
	PRINTFORML 「笑什么啊，笨蛋」

CASE "デートの約束"
	PRINTFORML 
;これは悪魔のみ
CASE "契約成立"
	[IF_DEBUG]
		PRINTFORML KOJO_DAILY_K14, %CSTR:PREV_DAILYCOM%後
	[ENDIF]
CASE "抜け出す"
	PRINTFORML 
CASE "あなたの部屋に連れ込まれた"
	[IF_DEBUG]
		PRINTFORML KOJO_DAILY_K14, %CSTR:PREV_DAILYCOM%後
	[ENDIF]
CASE "自室に招待"
	[IF_DEBUG]
		PRINTFORML KOJO_DAILY_K14, %CSTR:PREV_DAILYCOM%後
	[ENDIF]
CASE "自室に訪問された"
	;アドバイザーを伴っている場合
	IF FIND_COND("現在存在", "助手")
		PRINTFORML 
	ELSE
		PRINTFORML 
	ENDIF
CASE "アドバイザー部屋訪問"
	PRINTFORML 
;自宅移動の後にあなたに連れられて居間に戻ってきた場合など。優先度は低いです
CASE "帰還"
	PRINTFORML 
CASE "オナバレ"
	PRINTFORML 
