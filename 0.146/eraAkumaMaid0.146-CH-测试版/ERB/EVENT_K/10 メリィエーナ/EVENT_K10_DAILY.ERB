SELECTCASE ARGS
CASE "朝駆け"
	SELECTCASE CSTR:朝駆け
	CASE "朝フェラ", "朝シックスナイン"
		;恋慕
		IF TALENT:恋慕
		;奉仕精神Lv3以上
		ELSEIF ABL:奉仕精神 >= 3
			CALL PRINT_STRL, @"「%TEXTR("おはよう/起こしちゃったかしら")%_HH_　%CNAME("一人称")%にこういうのされるの嫌じゃないかしら」"
