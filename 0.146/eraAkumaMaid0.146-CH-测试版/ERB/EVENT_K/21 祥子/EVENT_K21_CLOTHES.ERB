;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K21, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 胖次/白/
	CSTR:胸罩 = 文胸/白/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "飾品"
	CALL SET_OTHER, "髪卡"

;学園での普段着です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "西装外衣"
	CSTR:襪子 = スリークォーターズ/
	CSTR:靴 = 紺色の小皮靴/直到脚腕/
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服运动衫"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF COND("冬")
		CALL SET_SHIRT, "针织露肩衣"
		CALL SET_SKIRT, "長裙"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "短筒女靴"
		CALL SET_OTHER, "披肩/织布外套"
		CALL SET_BRA, "吊帯衫"
	ELSE
		CALL SET_SHIRT, "蝴蝶結露肩外衣"
		CALL SET_SKIRT, "開衩長裙"
		CALL SET_SHOES, "无后跟鞋"
	ENDIF

