;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K13, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	IF COND("発情期") && BASE:欲求不満 >= 50 && TALENT:恋慕 && RAND:10 == 0
		CSTR:胖次 = 肉球印花胖次/黒/紐/
		CSTR:胸罩 = 猫型胸罩/黒/紐/ランジェリー/
	ELSE
		CSTR:胖次 = 低腰胖次/淡色/
		CSTR:胸罩 = 简约胸罩/淡色/
	ENDIF

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "飾品"
	CSTR:飾品 = 

;学園での普段着です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "西装外衣"
	IF COND("冬")
		CALL SET_OUTER, "运动衫長褲"
		CALL SET_OTHER, "围巾"
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服五分褲"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "競泳泳装"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF COND("周日")
		IF COND("冬")
			CALL SET_SHIRT, "针织毛衣/赤"
			CALL SET_OUTER, "运动衫長褲"
		ELSE
			CALL SET_SHIRT, "宽大的Ｔ恤"
			CALL SET_OUTER, "五分褲"
		ENDIF
	ELSE
		CALL CLOTHES_K13, "制服"
	ENDIF

;自分の部屋(notあなたの部屋)で着ます
CASE "居家服"
	IF COND("夏")
		CALL SET_SHIRT, "宽大的Ｔ恤"
	ELSE
		CALL CLOTHES_K13, "便装"
	ENDIF

;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"

;もちろんデートの際に着ます
CASE "约会衣装"
	SELECTCASE TEXTS("季節")
	CASE "冬"
		CALL SET_SHIRT, "针织毛衣/赤"
		CALL SET_SKIRT, "長裙"
		CALL SET_SHOES, "靴"
		CALL SET_OTHER, "围巾"
	CASE "夏"
		CALL SET_SHIRT, "无袖女式衬衫"
		CALL SET_SKIRT, "热褲"
		CALL SET_SHOES, "平底鞋"
	CASEELSE
		CALL SET_SHIRT, "女式衬衫"
		CALL SET_SKIRT, "裙"
		CALL SET_SHOES, "无后跟鞋"
	ENDSELECT
	IF COND("発情中")
		CALL SET_PANTIES, "Ｈ的内衣"
		CALL SET_BRA, "Ｈ的胸罩"
	ENDIF

ENDSELECT
