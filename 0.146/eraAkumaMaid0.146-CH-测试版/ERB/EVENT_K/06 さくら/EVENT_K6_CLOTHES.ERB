;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K6, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "下着"
	CSTR:パンツ = フリルのパンツ/白/フロントリボン紐/
	CSTR:ブラ = フリルのブラ/白/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "アクセサリ"
	CALL SET_OTHER, "カチューシャ"

;学園での普段着です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "ブレザー"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服ブルマ"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "水着"
	CALL SET_COSTUME, "スク水"

;自宅など学園外で着ます。設定必須です
CASE "普段着"
	SELECTCASE TEXTS("季節")
	CASE "夏"
		CSTR:服 = キャミソール/
		CSTR:スカート = レースのスカート/
		CSTR:靴下 = ハイソックス/
		CSTR:靴 = ローファー/足首まで/
		CALL SET_OTHER, "前開きパーカー"
	CASE "冬"
		CSTR:服 = 縦セーター/
		CSTR:スカート = ロングスカート/
		CSTR:靴下 = ハイソックス/
		CSTR:靴 = ローファー/足首まで/
		SIF PLACE("自宅")
			CALL SET_OTHER, "どてら"
	CASEELSE
		CSTR:服 = ワンピース/
		CSTR:スカート = スカート/ワンピース/
		CSTR:靴下 = ハイソックス/
		CSTR:靴 = ローファー/足首まで/
	ENDSELECT

