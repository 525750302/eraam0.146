;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K20, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 內褲/白/
	CSTR:胸罩 = 裹胸布/白/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "飾品"
	SIF CEVENT("卡莉斯塔：眼鏡着用")
		CALL SET_OTHER, "金丝眼鏡"

;学園での普段着です。設定必須です
CASE "制服"
	IF CEVENT("卡莉斯塔：制服男装")
		CALL SET_COSTUME, TEXTR("男子西装外衣/校服")
		;冬以外はランダムで半ズボン
		SIF COND("冬") == 0 && RAND:3 == 0
			CALL SET_OUTER, "五分褲"
	ELSE
		CALL SET_COSTUME, "西装外衣"
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服布鲁马"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF COND("周六") + COND("周日")
		SELECTCASE TEXTS("季節")
		CASE "秋", "冬"
			CALL SET_SHIRT, "女式衬衫"
			CALL SET_OUTER, "長褲"
			CALL SET_SOCKS, "及膝襪"
			CALL SET_SHOES, "短靴"
			CALL SET_OTHER, "围巾/风衣外套"
		CASEELSE
			CALL SET_SHIRT, "女式衬衫"
			CALL SET_OUTER, "五分褲"
			CALL SET_SOCKS, "及膝襪"
			CALL SET_SHOES, "短靴"
		ENDSELECT
	ELSEIF CEVENT("卡莉斯塔：女仆装")
		CSTR:服 = 潇洒的女仆装/連衣裙/
		CSTR:裙 = 围裙/連衣裙/
		CSTR:襪子 = 及膝襪/
		CSTR:靴 = 短靴/
		CSTR:飾品 = 礼服头花/
	ELSE
		CALL SET_SHIRT, "執事服"
		CALL SET_OUTER, "西褲"
		CALL SET_SOCKS, "及膝襪"
		CALL SET_SHOES, "短靴"
	ENDIF
;自分の部屋(notあなたの部屋)で着ます
CASE "居家服"
	CALL SET_SHIRT, "女式衬衫"
	CALL SET_OUTER, "五分褲"
	CALL SET_SOCKS, "及膝襪"

;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"

;もちろんデートの際に着ます
CASE "约会衣装"

ENDSELECT
