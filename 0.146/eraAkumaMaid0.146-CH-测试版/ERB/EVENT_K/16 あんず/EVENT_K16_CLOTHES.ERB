;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K16, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 內褲/白/
	CSTR:胸罩 = 文胸/白/

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "飾品"
	CSTR:飾品 = 

;学園での普段着です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "水手服"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服五分褲"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF COND("冬")
		IF PLACE("自宅")
			CALL SET_SHIRT, "褞袍"
			CALL SET_OUTER, "运动衫長褲"
		ELSE
			CALL SET_COSTUME, "上下运动衫"
		ENDIF
	ELSE
		IF RAND:2
			CALL SET_SHIRT, "怪图案Ｔ恤"
			CALL SET_OUTER, "五分褲"
			CALL SET_SOCKS, "短襪"
			CALL SET_SHOES, "運動鞋"
		ELSE
			CALL SET_COSTUME, "上下运动衫"
		ENDIF
	ENDIF
;自分の部屋(notあなたの部屋)で着ます
CASE "居家服"

;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"

;もちろんデートの際に着ます
CASE "约会衣装"
	SELECTCASE TEXTS("季節")
	CASE "夏"
		CALL SET_SHIRT, "怪图案Ｔ恤"
		CALL SET_OUTER, "五分褲"
		CALL SET_SHOES, "凉鞋"
	CASE "冬"
		CALL SET_SHIRT, "运动衫"
		CALL SET_OUTER, "牛仔褲"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "運動鞋"
	CASEELSE
		CALL SET_SHIRT, "怪图案Ｔ恤"
		CALL SET_OUTER, "牛仔褲"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "運動鞋"
	ENDSELECT
ENDSELECT

