CASE "便装"
	IF COND("冬")
		IF PLACE("自宅")
			CALL SET_SHIRT, "褞袍"
			CALL SET_OUTER, "运动衫長褲"
		ELSE
			CALL SET_COSTUME, "西装外衣"
		ENDIF
	ELSE
		IF RAND:2
			CALL SET_SHIRT, "Ｔ恤"
			CALL SET_OUTER, "五分褲"
			CALL SET_SOCKS, "短襪"
			CALL SET_SHOES, "運動鞋"
		ELSE
			CALL SET_COSTUME, "上下运动衫"
		ENDIF
	ENDIF

