@COM267
PRINTL 筋弛緩剤

CALL TRAIN_MESSAGE_B

SIF REFUSE_CHECK()
	RETURN 0

STR:前回コマンド = 筋弛緩剤

RETURN 1

@FLAG_COM267, ARG

@SOURCE_COM267, ARG
CALL VARSET_COMF

SOURCE:0:恐れ = 2000
SOURCE:0:逸脱 = 1000

CALL CALC, "調教ソース", ARG


@TRAIN_MESSAGE_COM267
PRINTFORML %CALLNAME:TARGET%の何処に筋弛緩剤を注射しますか？
PRINTFORML (注意：劇薬なので、一回につき一箇所にしか投与できません)
PRINTFORML  [ 0] アナル
SIF TALENT:オトコ == 0
	PRINTFORML  [ 1] 尿道周辺
SIF TALENT:オトコ == 0
	PRINTFORML  [ 2] アソコ
SIF TALENT:オトコ == 0 && TALENT:処女 == 0 && TALENT:妊娠 == 0
	PRINTFORML  [ 3] 子宮口
PRINTFORML [100] 戻る

IF TALENT:オトコ == 0 && TALENT:処女 == 0 && TALENT:妊娠 == 0
	CALL INPUT_SELECT, 4, 100
ELSEIF TALENT:オトコ == 0
	CALL INPUT_SELECT, 3, 100
ELSE
	CALL INPUT_SELECT, 1, 100
ENDIF

SELECTCASE RESULT
CASE 100
	TFLAG:コマンドキャンセル = 1
	RETURN 0
CASEELSE
	TFLAG:地の文分岐 = RESULT
	SETBIT TEQUIP:筋弛緩剤, RESULT

	SELECTCASE RESULT
	CASE 0
		PRINTFORMW 筋弛緩剤を厳密に計量して使用し、%CALLNAME:TARGET%の肛門周辺の筋肉の締まりを緩めました
		IF TALENT:薬毒耐性
			ABL:Ａ拡張 += 1
			PRINTFORMW Ａ拡張レベル＋１
		ELSE
			ABL:Ａ拡張 += 2
			PRINTFORMW Ａ拡張レベル＋２
		ENDIF
		CALL GET_EXABL_A, TARGET
		ABL:Ａ名器度 = ABL_A(TARGET)
	CASE 1
		PRINTFORMW 筋弛緩剤を厳密に計量して使用し、%CALLNAME:TARGET%の尿道括約筋の締まりを緩めました
	CASE 2
		PRINTFORMW 筋弛緩剤を厳密に計量して使用し、%CALLNAME:TARGET%の膣の締まりを緩めました
		IF TALENT:薬毒耐性
			ABL:Ｖ拡張 += 1
			PRINTFORMW Ｖ拡張レベル＋１
		ELSE
			ABL:Ｖ拡張 += 2
			PRINTFORMW Ｖ拡張レベル＋２
		ENDIF
		CALL GET_EXABL_V, TARGET
		ABL:Ｖ名器度 = ABL_V(TARGET)
	CASE 3
		PRINTFORMW 筋弛緩剤を厳密に計量して使用し、%CALLNAME:TARGET%の子宮口を柔らかくしました
	ENDSELECT
ENDSELECT

