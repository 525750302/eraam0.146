@COM_ABLE178
;二人に押し倒されるコマンド実行判定
SIF COMABLE_DEF(178)
	RETURN 0
;助手が居ないとダメ
SIF ASSI == 0
	RETURN 0
;MASTER調教中で無いとダメ
SIF ASSIPLAY
	RETURN 0
SIF COND("疲労")
	RETURN 0
;バイブ挿入中はダメ
SIF TEQUIP:振動棒 || TEQUIP:肛用振動棒
	RETURN 0
;以下、助手の条件など
SIF COND("Ｈは你とだけ") || COND("Ｈは你とだけ", ASSI)
	RETURN 0
;恋慕、淫乱、相思相愛状態ならＯＫとする
IF TALENT:ASSI:恋慕 || TALENT:ASSI:淫乱 || TALENT:ASSI:相思相愛
;それ以外なら、助手とTARGETが仲良くないとダメ。
ELSE
	SIF RELATION:(NO:ASSI) < 120
		RETURN 0
ENDIF

CALL COM_ORDER_COM178, 1
RETURN LIMIT(RESULT, 0, 1)


