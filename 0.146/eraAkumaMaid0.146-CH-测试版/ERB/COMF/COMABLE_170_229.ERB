@COM_ABLE174
;室内露出プレイ
SIF COMABLE_DEF(174)
	RETURN 0
;解除はいつでも可能
SIF TEQUIP:室内露出PLAY
	RETURN 1
;露出プレイの合意がないとダメ
SIF COND("合意：露出PLAY") == 0
	RETURN 0
;調教対象、助手以外の部員がいないとダメ
SIF FIND_COND("現在存在", "助手ではない") == 0
	RETURN 0
RETURN 1

@COM_ABLE175
;着せ替え実行判定
SIF COMABLE_DEF(175)
	RETURN 0
;恍惚状態だとダメ
SIF STATE("恍惚", PLAYER)
	RETURN 0
;通常状態以外は脱ぐことのみ可能
IF TEQUIP:推倒 || TEQUIP:拘束
	SIF CHECK_CLO("裸体") == 0
		RETURN 1
	RETURN 0
ELSEIF TEQUIP:室内露出PLAY || TEQUIP:野外PLAY
	SIF CHECK_CLO("裸体")
		RETURN 0
ENDIF
;ズレ不可のパンツを穿いている場合はそれを脱がすだけは出来る
SIF CHECK_PANTIES("不可移開")
	RETURN 1
;野外プレイor室内露出プレイ中は、露出癖3Lvか信頼4Lvが無いとダメ
SIF (TEQUIP:室内露出PLAY || TEQUIP:野外PLAY) && ABL:信頼 < 4 && ABL:露出癖 < 3
	RETURN 0

CALL COM_ORDER_COM175, 1
RETURN LIMIT(RESULT, 0, 1)


@COM_ABLE176
;押し倒されるコマンド実行判定
SIF COMABLE_DEF(176)
	RETURN 0
;疲れていると奉仕精神がないとダメ
SIF COND("疲労") && ABL:奉仕精神 < 5
	RETURN 0
;バイブ挿入中はダメ
SIF TEQUIP:振動棒 || TEQUIP:肛用振動棒
	RETURN 0
;精液中毒か奉仕精神が無いとダメ
SIF ABL:精液中毒 == 0 && ABL:奉仕精神 < 5
	RETURN 0

CALL COM_ORDER_COM176, 1
RETURN LIMIT(RESULT, 0, 1)


