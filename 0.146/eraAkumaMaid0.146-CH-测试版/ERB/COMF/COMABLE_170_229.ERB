@COM_ABLE170
;ビデオ撮影実行判定
SIF COMABLE_DEF(170)
	RETURN 0
;解除はいつでも可能
SIF TEQUIP:攝像機
	RETURN 1
;初期パートナーのみ
SIF TARGET != FLAG:調教開始時の対象
	RETURN 0
;押し倒しの時には解除のみ可能
SIF TEQUIP:推倒 && TEQUIP:攝像機 == 0
	RETURN 0
;カメラを持っていないとダメ
SIF ITEM:撮影機材 == 0
	RETURN 0
RETURN 1

@COM_ABLE171
;仕様が決まるまで封印
RETURN 0
;野外プレイ実行判定
SIF COMABLE_DEF(171)
	RETURN 0
;解除はいつでも可能
SIF TEQUIP:野外PLAY
	RETURN 1
;屈服刻印3LVか恋慕でないとダメ
SIF TALENT:恋慕 == 0 && MARK:屈服刻印 < 3
	RETURN 0
;信頼かマゾっ気が3以上ないとダメ
SIF ABL:信頼 <= 2 && ABL:受虐属性 <= 2
	RETURN 0
;浣腸使用中はプラグがなければ不可
SIF TEQUIP:浣腸 && COND("肛門栓") == 0
	RETURN 0
RETURN 1

