ELSEIF INSERT("合体中") && RANDIF(1, TEQUIP:キス)
	PRINTFORM は%TEXTS("合体中", PLAYER)%
ELSEIF TEQUIP:キス
	PRINTFORM は%TEXTS("キス継続")%、
	CALL SETFLAG, "追加キスフラグ", TARGET
