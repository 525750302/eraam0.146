@FLAG_COM260, ARG

@SOURCE_COM260, ARG


@TRAIN_MESSAGE_COM260
#DIM MEMO_VL
#DIM MEMO_AL
#DIMS CHOICES
#DIMS SELECT_TABLE

MEMO_VL = CUP:Ｖ潤
MEMO_AL = CUP:Ａ潤

CALL SETFLAG, "潤滑追加", 10000

VARSET LOCALS
SELECT_TABLE = 前の穴のみ/アナルのみ/両穴ともしっかり
SPLIT SELECT_TABLE, "/", LOCALS

IF TALENT:オトコ == 0
	PRINTFORML どんな感じにローションを塗りますか？
	CALL PRINT_SELECT, SELECT_TABLE
	CHOICES = %LOCALS:RESULT%
ELSE
	CHOICES = 両穴ともしっかり
ENDIF

SELECTCASE CHOICES
CASE "前の穴のみ"
	PRINTFORMW %CALLNAME:PLAYER%は%CALLNAME:TARGET%の全身に、お尻の穴付近は避けるようにしてローションを塗りたくった。
	CUP:Ａ潤 = MEMO_AL
CASE "アナルのみ"
	PRINTFORMW %CALLNAME:PLAYER%は%CALLNAME:TARGET%の全身に、膣口だけは敢えて避けるようにしてローションを塗りたくった。
	CUP:Ｖ潤 = MEMO_VL
CASEELSE
	PRINTFORMW %CALLNAME:PLAYER%は%CALLNAME:TARGET%の全身にローションを塗りたくった。
ENDSELECT

IF CHOSECOM(SELECTCOM) == 0
	PRINTFORM %CALLNAME:TARGET%の
	IF TALENT:小柄
		PRINT 小さな
	ELSEIF TALENT:巨乳
		PRINT 豊満な
	ELSEIF TALENT:長身
		PRINT すらっとした
	ENDIF
	PRINTFORM 身体は塗り広げられたローションでてらてらと光を反射し、
	IF TALENT:魅力
		PRINTFORM いつにも増して
	ELSEIF TALENT:小柄
		PRINTFORM 背徳的で
	ELSEIF TALENT:清楚 || TALENT:気品
		PRINTFORM いつもの%CALLNAME:TARGET%にはない
	ENDIF
	PRINTFORM 妖しい魅力を
	IF RAND:2
		PRINTFORMW 振りまいている……
	ELSE
		PRINTFORMW 感じずには居られない…
	ENDIF
ENDIF
