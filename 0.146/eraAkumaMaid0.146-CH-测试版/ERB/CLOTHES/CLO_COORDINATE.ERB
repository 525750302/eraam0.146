;パンスト指定してる？
SIF CHECK_OUTER("连褲襪")
	CALL SETFLAG, "连褲襪着替えのお願い", TARGET

SIF CFLAG:電源BOX && CHECK_CLO("電源BOX保持可能") == 0
	CFLAG:電源BOX = 0

TARGET = MEMO_TARGET

