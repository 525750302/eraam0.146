	CSTR:ARG:パンツ = %RESET_CLOCOLOR(CSTR:ARG:パンツ)%%ARGS%/
	EQUIP:ARG:パンツ = STRLENS(CSTR:ARG:パンツ)
ENDIF
;ブラの色をパンツに合わせる
