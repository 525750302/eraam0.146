			CSTR:ARG:ブラ += @"%CHECK_CLOCOLOR(CSTR:ARG:パンツ)%/"
		ENDIF
	ENDIF
	EQUIP:ARG:ブラ = STRLENS(CSTR:ARG:ブラ)
ENDIF


