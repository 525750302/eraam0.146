	ELSEIF FLAG:ムード >= 60 || (FLAG:ムード >= 30 && FLAG:ムード >= RAND:180)
		LOCAL = 2
	ELSE
		LOCAL = 1
	ENDIF
	;ムードが高い場合の追加口上
	SIF LOCAL >= RAND:4 && LOCAL >= 4
		LOCALS = %TEXTR("ちゅっ/んちゅっ/んっ/んんっ")%%UNICODE(0x2661)%　%LOCALS%
	;ムードがさらに高いと追加口上
