		IF LOCAL >= RAND:4 && LOCAL >= 4
			LOCALS = %LOCALS%%UNICODE(0x2661)%
		ELSE
			LOCALS = %LOCALS%♪
		ENDIF
		;行末以外の記号の後に全角スペースを入れる
		SIF LIMIT_MEMO - LCOUNT > 1
			LOCALS = %LOCALS%　
	NEXT
