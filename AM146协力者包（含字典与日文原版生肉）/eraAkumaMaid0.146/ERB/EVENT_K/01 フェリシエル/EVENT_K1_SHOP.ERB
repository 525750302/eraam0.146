@KOJO_SHOP_K1, ARGS

SELECTCASE ARGS
CASE "一緒に出発"
	;着替えてもらう
	IF CHECK_CLO("ハダカ") || CHECK_CLO("水着姿") || CHECK_CLO("体操服姿") || CHECK_CLO("下着姿")
		PRINTFORML 「あら、お買い物ですか？」
