		CALL SET_SHIRT, "Ｔシャツ"
		CALL SET_OUTER, "ホットパンツ"
		CALL SET_SHOES, "サンダル"
	CASEELSE
		IF RAND:2
			CALL SET_SHIRT, "バックリボンカットソー"
			CALL SET_SKIRT, "スカート"
			CALL SET_SHOES, "ミュール"
		ELSE
			CALL SET_SHIRT, "リボンブラウス"
			CALL SET_SKIRT, "ロングスカート"
			CALL SET_SOCKS, "ソックス"
			CALL SET_SHOES, "パンプス"
