	ELSE
		CALL PRINT_STRW, @"「……%TEXTR("もう/こら/エッチなんだから")%_HH_」"
	ENDIF
	PRINTL 
	PRINTFORMW %CALLNAME:MASTER%の%TEXTR("大きな/立派な/硬い")%股間に触れてしまった%CALLNAME:TARGET%は%TEXTR("満更でもなさそうに頬を染めてみせた/恥ずかしそうに顔を赤らめている")%。

ENDSELECT

