	PRINTFORML 「あわーめんあーらんにんぐふろむざばとーふぃる…あっせいむふるじすぷれい…」
ENDIF

;-------------------------------------------------
;メイン画面で選択肢として独立している日常イベントでのセリフ。WAIT使って大丈夫です
;こっちはあくまで選択肢で選ばれた場合に限るのに注意。
;-------------------------------------------------
@KOJO_DAILYCOM_K9, ARGS
;挨拶
#DIMS GREETING


SELECTCASE ARGS
CASE "帰り道"
	;SAVESTR:現在位置 と SAVESTR:帰り道の行動 を決定する
	CALL SETFLAG, "遭遇地点"
	;地の文を出す
	CALL DAILY_MESSAGE, "帰り道"
;これは昼か夜
CASE "挨拶する"
	IF COND("夜")
		GREETING = こんばんは
	ELSEIF COND("昼")
		GREETING = こんにちは
	ELSE
		GREETING = おはようございます
	ENDIF
	;あなたに先に挨拶をされた
	IF CFLAG:挨拶した == 0
		PRINTFORMW 「%GREETING%」
		PRINTFORMW 「今日も良い一日を過ごしましょうね」
	ELSE
		PRINTFORMW 「%GREETING%！」
	ENDIF
CASE "起こす"
	PRINTFORMW 
CASE "トーク"
	SELECTCASE STR:日常イベント名
	CASE "褒める"
		IF RAND:3 == 0
			PRINTFORMW 「う、あ、その」
			PRINTFORMW 明らかに褒められ慣れていないのであろう、%CALLNAME:TARGET%は顔を赤らめている
		ELSEIF RAND:2
			PRINTFORMW 「ほ、褒められるようなことしましたかね、わたし」
		ELSE
			PRINTFORMW 「そ、そうですか」
			PRINTFORMW %CALLNAME:TARGET%はあまり気に留めていないふりをしたが、顔のほころびまでは隠せていない
		ENDIF
	CASE "甘い言葉"
		IF TALENT:恋慕
			PRINTFORMW 
		ELSEIF CALCF("甘い言葉成功")
			PRINTFORMW 「…！」
			PRINTFORMW 「そ、そういう不意打ちは、卑怯だと思いますよ！」
		ELSE
			PRINTFORMW 「む、む、本気なんだか本気じゃないんだか…」
		ENDIF
	CASEELSE
		IF RAND:6 == 0
			PRINTFORMW 「悪魔祓いは銀の弾丸で悪魔を撃つ…」
			PRINTFORMW 「というのは銃火器がなんか凄いものだと思われていた時代のフカシであってですね」
			PRINTFORMW 「現代の悪魔祓いは中性子パルスエミッタか位相ディスラプター・ライフルを使って戦うわけです」
			PRINTFORMW 「高プロトン伝導性ビームがダークマターと対消滅し、あっ、ぶたなくたっていいじゃないですかぁ」
		ELSEIF RAND:5 == 0
			PRINTFORMW 「多くの文化圏において、悪魔は鉄と火に弱いとされています」
			PRINTFORMW 「鉄も火も古来から権威の象徴であったわけですが、これは偶然の一致ですからね」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「数学のお勉強ですか、いいですよ、わたしが例題を出しましょう」
			PRINTFORMW 「あるプロテスタントの企業が不正に得た利益をxとして、この詐欺師共の株価をyとするとき…」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「この国では、たとえ悪魔を見つけてもおいそれとは手を出せないんですよね」
			PRINTFORMW 「色々あるんです、色々…」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「最近、この近辺がなんとかいうアニメの聖地になり、巡礼が絶えないとか」
			PRINTFORMW 「この島国は無宗教の地と聞いていましたが、信心深い人もいる…世の中捨てたものではありません」
		ELSE
			PRINTFORMW 「エクソシストが精神科医とソーシャルワーカーを兼ねていた時代がありました」
			PRINTFORMW 「古き良き時代です。現代人はなんでもかんでも心の病気扱いでかわいそうです」
		ENDIF
	ENDSELECT

CASE "汗を拭く"
	PRINTFORMW 
;睡眠中の悪戯
CASE "寝込みを襲う"
	;寝言
	CALL KOJO_SLEEP_K9
	WAIT
CASE "もてなす"
	SELECTCASE STR:日常イベント名
	CASE "おっぱいリフトする"
		PRINTFORMW 
	CASE "マッサージする"
		PRINTFORMW 「あー。これが下心から出たものでなければ…」
		PRINTFORMW 「勘ぐりはやめましょう、うん、うん」
	CASE "キスする"
		IF CSTR:PREV_DAILYCOM == STR:日常イベント名
			PRINTFORMW 
		ELSE
			PRINTFORMW 
		ENDIF
	CASE "膝枕する"
		PRINTFORMW 
	CASE "お茶を淹れる"
		PRINTFORMW 

	CASEELSE
		PRINTFORMW 
	ENDSELECT
CASE "寝姿を整える"
	;寝言
	CALL KOJO_SLEEP_K9
	WAIT
CASE "隙を見せる"
	SELECTCASE STR:日常イベント名
	CASE "お風呂のお誘い"
		PRINTFORMW 
	CASE "Ｈのお誘い", "パンツ見せ"
		PRINTFORMW 
	CASE "押し倒し"
		PRINTFORMW 
	CASE "口淫"
		PRINTFORMW 
	CASE "頬キス", "キス"
		PRINTFORMW 
	CASE "膝を枕にしてくる", "抱きつき", "おっぱい押し付け", "股間擦り付け"
		PRINTFORMW 
	CASE "なでなで", "手淫"
		PRINTFORMW 
	CASE "膝枕"
		PRINTFORMW 
	CASE "お茶汲み"
		PRINTFORMW 
	;それ以外
	CASEELSE
		PRINTFORMW 「どうかしましたか？　ふふ」
	ENDSELECT
CASE "トイレ"
	;トイレで用を済ませた後の台詞
	IF BASE:尿意 == 0
		;主人もトイレで済ませてきた
		IF BASE:MASTER:尿意 == 0
			PRINTFORMW 
		ELSE
			PRINTFORMW 
		ENDIF
	;トイレに行く際の台詞
	ELSE
		PRINTFORMW 
	ENDIF
CASE "トイレ詮索"
	PRINTFORMW 
CASE "アソコチェック"
	;睡眠中の悪戯
	IF CFLAG:睡眠
		;寝言
		CALL KOJO_SLEEP_K9
		WAIT
	ELSEIF COND("合意：アソコチェック") == 0
		;拒否されたのに連続実行
		IF CSTR:PREV_DAILYCOM == STR:日常イベント名
			PRINTFORMW 
		ELSE
			PRINTFORMW 
		ENDIF
	ELSE
		PRINTFORMW 
	ENDIF
CASE "パンツチェック"
	;睡眠中の悪戯
	IF CFLAG:睡眠
		;寝言
		CALL KOJO_SLEEP_K9
		WAIT
	;連続実行
	ELSEIF CSTR:PREV_DAILYCOM == STR:日常イベント名
		PRINTFORMW 
	ELSE
		PRINTFORMW 
	ENDIF
CASE "ブルマチェック", "股間観察"
	;睡眠中の悪戯
	IF CFLAG:睡眠
		;寝言
		CALL KOJO_SLEEP_K9
		WAIT
	ELSEIF CFLAG:股間確認済 && RAND:2
		PRINTFORMW 
	;上機嫌
	ELSEIF CFLAG:褒める
		PRINTFORMW 
	ELSE
		PRINTFORMW 
	ENDIF
CASE "スカートをめくる"
	SELECTCASE STR:日常イベント名
	CASE "スカートたくし上げ"
		;パンチラ直後
		IF COND("パンチラ直後")
			PRINTFORMW 
		ELSE
			PRINTFORMW 
		ENDIF
	;スカートをめくる
	CASEELSE
		;寝起きの胡乱な状態を襲う
		IF CFLAG:寝起き
			PRINTFORMW 
		;睡眠中の悪戯
		ELSEIF CFLAG:睡眠
			;寝言
			CALL KOJO_SLEEP_K9
			WAIT
		;パンチラ直後
		ELSEIF COND("パンチラ直後")
			PRINTFORMW 
		ELSE
			IF COND("挨拶前")
				PRINTFORMW 
			ELSE
				;パンツはいてない
				IF EQUIP:パンツ == 0
					PRINTFORMW 
				ELSE
					PRINTFORMW 
				ENDIF
			ENDIF
		ENDIF
	ENDSELECT
ENDSELECT



