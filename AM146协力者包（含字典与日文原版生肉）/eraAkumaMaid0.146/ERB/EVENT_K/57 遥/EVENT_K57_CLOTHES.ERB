;-------------------------------------------------
;このキャラ独自の衣装を設定する。制服、体操服、水着は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K57, ARGS

SELECTCASE ARGS
;キャラクター独自の下着の組み合わせを設定できます。設定必須です。一定の確率で着用します。
;もしも普段は付けない、という事ならCSTR:パンツ = と等号の右側を書き込まない事で出来ます。
CASE "下着"
	IF TALENT:男の娘
		IF TALENT:淫乱
			CSTR:パンツ = マイクロビキニ
			CSTR:ブラ = マイクロビキニブラ
		ELSE
			CSTR:パンツ = 縞パン
			CSTR:ブラ = ノーマルブラ
		ENDIF
	ELSE
		CSTR:パンツ = ボクサーパンツ/黒/
		IF CEVENT("乳首の虜")
			CSTR:ブラ = スポーツブラ
		ELSE
			CSTR:ブラ = 
		ENDIF
	ENDIF

;衣装に関わらず常に付けているアクセサリです。設定しなくてもかまいません
CASE "アクセサリ"

;学園での普段着です。設定必須です。
;セーラー服, ミニスカセーラー服, ブレザー, ミニスカブレザー, アメスクなど
;黒いセーラー服を着せたい場合には CALL SET_COSTUME, "セーラー服/黒" のように書き込むことで色を変えることが出来ます
;(RESOURCES→MAIDFACE→13服 フォルダ内にある MAIDFACE13.csv の該当衣装を見て色を選ばないとならないため上級者向きです)
CASE "制服"
	IF CEVENT("女装") || TALENT:男の娘
		CALL SET_COSTUME, "セーラー服"
	ELSE
		CALL SET_COSTUME, "男子ブレザー"
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;体操服ブルマ, 体操服ハイレグブルマ, 体操服ハーフパンツ, 体操服スパッツ, 体操服ジャージなど
CASE "体操服"
	IF (CEVENT("女装") || TALENT:男の娘) && TALENT:淫乱
		CALL SET_COSTUME, "体操服ブルマ"
	ELSE
		CALL SET_COSTUME, "体操服ジャージ"
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;スク水, 競泳水着, 白ビキニ, 黒ビキニなど
CASE "水着"
	IF (CEVENT("女装") || TALENT:男の娘) && CEVENT("乳首の虜")
		CALL SET_COSTUME, "スク水"
	ELSE
		CALL SET_COSTUME, "サーフパンツ"
	ENDIF

;自宅など学園外で着ます。設定必須です
CASE "普段着"
	IF COND("冬")
		CALL SET_OUTER, "ズボン"
		CALL SET_SOCKS, "靴下"
		CALL SET_GLOVE, "手袋"
		IF TALENT:男の娘
			CALL SET_SHIRT, "萌え袖セーター/ワンピース"
			CALL SET_SKIRT, "裾/ワンピース/超ミニ"
			CALL SET_SHOES, "モカシン"
			CALL SET_OTHER, "ストール"
		ELSE
			CALL SET_SHIRT, "セーター"
			CALL SET_SHOES, "ブーツ"
		ENDIF
	ELSEIF COND("夏")
		IF TALENT:男の娘
			CALL SET_SHIRT, "白いワンピース"
			CALL SET_SHOES, "ミュール"
		ELSE
			CALL SET_SHIRT, "タンクトップ"
			CALL SET_OUTER, "ハーフパンツ"
			CALL SET_SHOES, "サンダル"
		ENDIF
	ELSEIF COND("春")
		IF TALENT:男の娘
			CALL SET_SHIRT, "ルーズブラウス"
			CALL SET_SKIRT, "ミニスカート"
			CALL SET_SHOES, "ミュール"
			CALL SET_OTHER, "カチューシャ"
		ELSE
			CALL SET_SHIRT, "Ｔシャツ"
			CALL SET_OUTER, "ハーフパンツ"
			CALL SET_SOCKS, "靴下"
			CALL SET_SHOES, "スニーカー"
		ENDIF
	ELSE
		IF TALENT:男の娘
			CALL SET_SHIRT, "Ｔシャツ"
		ELSE
			CALL SET_SHIRT, "パーカー"
		ENDIF
		CALL SET_OUTER, "ジーンズ"
		CALL SET_SOCKS, "靴下"
		CALL SET_SHOES, "スニーカー"
		CALL SET_OTHER, "イルカのペンダント"
	ENDIF

;自分の部屋(notあなたの部屋)で着ます
CASE "部屋着"
	IF COND("夏")
		CALL SET_SHIRT, "タンクトップ"
		CALL SET_BRA, ""
		CALL SET_SHOES, "裸足"
		SIF TALENT:男の娘
			CALL SET_OUTER, "ハーフパンツ"
	ELSE
		CALL SET_SHIRT, "だぼだぼＴシャツ"
		IF COND("冬")
			CALL SET_OUTER, "ズボン"
		ELSEIF TALENT:淫乱 && RAND:2
			CALL SET_OUTER, ""
		ELSE
			CALL SET_OUTER, "ハーフパンツ"
		ENDIF
	ENDIF

;デート以外で家から外に出る際に着ます。ラブホ呼出とかね
CASE "外出着"
IF COND("春")
	CALL SET_SHIRT, "Ｔシャツ"
	CALL SET_SOCKS, "靴下"
	IF CEVENT("女装")
		CALL SET_SKIRT, "巻きスカート"
		CALL SET_SHOES, "パンプス"
	ELSE
		CALL SET_OUTER, "ハーフパンツ"
		CALL SET_SHOES, "スニーカー"
	ENDIF
ELSEIF COND("夏")
	IF CEVENT("女装")
		CALL SET_SHIRT, "サマードレス/ワンピース"
		IF TALENT:淫乱
			CALL SET_SKIRT, "ミニスカート/ワンピース"
		ELSE
			CALL SET_SKIRT, "スカート/ワンピース"
		ENDIF
		CALL SET_SHOES, "ミュール"
		CALL SET_OTHER, "麦わら帽子"
	ELSE
		CALL SET_SHIRT, "タンクトップ"
		CALL SET_OUTER, "ハーフパンツ"
		CALL SET_SHOES, "サンダル"
	ENDIF
ELSEIF COND("秋")
	IF CEVENT("女装")
		CALL SET_SHIRT, "Ｔシャツ/ワンピース"
		CALL SET_SKIRT, "裾/ワンピース/超ミニ"
		IF TALENT:淫乱 && RAND:2
			CALL SET_OUTER, ""
		ELSE
			CALL SET_OUTER, "ハーフパンツ"
		ENDIF
		CALL SET_SOCKS, "ルーズソックス"
	ELSE
		CALL SET_SHIRT, "パーカー"
		CALL SET_OUTER, "ジーンズ"
		CALL SET_SOCKS, "靴下"
	ENDIF
	CALL SET_SHOES, "スニーカー"
ELSE
	IF CEVENT("女装")
		CALL SET_SHIRT, "萌え袖セーター"
		CALL SET_OUTER, "ローライズジーンズ"
		CALL SET_OTHER, "ニット帽"
	ELSE
		CALL SET_SHIRT, "セーター"
		CALL SET_OUTER, "ズボン"
	ENDIF
	CALL SET_SOCKS, "靴下"
	CALL SET_SHOES, "ブーツ"
	CALL SET_OTHER, "手袋"
ENDIF

;もちろんデートの際に着ます
CASE "デート衣装"
	IF CEVENT("女装")
		CALL SET_SHIRT, "Ｔシャツ"
		CALL SET_OUTER, "キュロット"
		CALL SET_SOCKS, "靴下"
		CALL SET_SHOES, "ブーツ"
	ELSE
		IF EXP:デート経験 <= 5
			CALL SET_SHIRT, "変な柄のＴシャツ"
		ELSE
			IF COND("冬")
				CALL SET_SHIRT, "セーター"
			ELSE
				CALL SET_SHIRT, "シャツジャケット"
			ENDIF
		ENDIF
		IF RAND:2
			CALL SET_OUTER, "ジーンズ"
		ELSE
			CALL SET_OUTER, "ズボン"
		ENDIF
		CALL SET_SOCKS, "靴下"
		CALL SET_SHOES, "靴"
	ENDIF
	IF COND("冬")
		IF CEVENT("女装") && RAND:2
			CALL SET_OTHER, "ストール"
		ELSE
			CALL SET_OTHER, "コート"
		ENDIF
		SIF RAND:3 == 0 || COND("種族：吸血鬼")
			CALL SET_OTHER, "ニット帽"
	ELSEIF COND("夏") && (RAND:3 == 0 || COND("種族：吸血鬼"))
		CALL SET_OTHER, "麦わら帽子"
	ELSEIF COND("種族：吸血鬼")
		IF CEVENT("女装")
			CALL SET_OTHER, "ベレー帽"
		ELSE
			CALL SET_OTHER, "ピクチャーハット"
		ENDIF
	ENDIF
ENDSELECT

IF CHECK_SHIRT("変な柄")
	IF RAND:2
		CSTR:服 += @"柄：%TEXTR("You are Dick/Mamma stand up Yellowstone/Back Bay Sadism/I am Boo")%/英字/"
	ELSE
		CSTR:服 += @"柄：%TEXTR("大感謝祭/切り捨て御免")%/"
	ENDIF
ENDIF
;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;-------------------------------------------------
@MAIDFACE_K57
IF PLACE("自宅")
	CSTR:アレンジ = ノーアレンジ
ELSE
	IF CEVENT("女装") || TALENT:男の娘
		CSTR:アレンジ = ポニーテール
	ELSE
		CALL SETFLAG, "普段の髪型復元", TARGET
	ENDIF
ENDIF


@K57_CLOTHCHANGE, ARG

SIF ARG == 0
	ARG = TARGET

IF CEVENT("女装", ARG) || TALENT:ARG:男の娘
	IF TALENT:淫乱
		CSTR:ARG:好きなパンツ = マイクロビキニ/Ｔバック/ローライズパンツ/Ｈな下着
		CSTR:ARG:好きなブラ = マイクロビキニブラ/マイクロブラ/ハーフカップブラ/オープンブラ
	ELSE
		CSTR:ARG:好きなパンツ = 縞パン/パンティ
		CSTR:ARG:好きなブラ = ノーマルブラ/スポーツブラ
	ENDIF
ELSE
	CSTR:ARG:好きなパンツ = トランクス/ボクサーブリーフ
	CSTR:ARG:好きなブラ =ノーブラ
ENDIF
