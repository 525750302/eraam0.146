@COM145
;剃毛
;露出癖やマゾ度が高い場合、かなり興奮する

PRINTL 剃毛

;-------------------------------------------------
;実行できるかの判定
;-------------------------------------------------
CALL SHOW_COM_ORDER_COM, 145

;実行できない
SIF TCVAR:やる気 == 0
	RETURN 0
;-------------------------------------------------
;実行決定
;-------------------------------------------------
SIF TEQUIP:拘束
	TCVAR:やる気 = MAX(TCVAR:やる気 - 30, 0)

CALL TRAIN_MESSAGE_B

;どのように剃ったか
SELECTCASE TFLAG:地の文分岐
CASE 1
	BASE:陰毛 = 300
CASE 2
	BASE:陰毛 = 200
CASE 3
	BASE:陰毛 = 500
ENDSELECT

SIF REFUSE_CHECK()
	RETURN 0

STR:前回コマンド = 剃毛

RETURN 1


@FLAG_COM145, ARG
CALL SETFLAG, "剃毛フラグ", TARGET
;対象のＶ⇔調教者の指の汚れが移動
CALL EQ_STAIN, TARGET, "Ｖ", PLAYER, "手"
;アソコを露出させる
CALL SETFLAG, "ボトムを露出：テキスト無し", TARGET
;日付を5にする。上手だと日付が0になります。ツルツルに剃った場合も。
SIF ABL:PLAYER:技巧 < 4 && COND("陰毛") > 3
	BASE:陰毛 += 5

@SOURCE_COM145, ARG
CALL SOURCE_SMPLAY, "剃毛", ARG

CALL VARSET_COMF

CALL SOURCE_DOWNBASE_HP, 145

SOURCE:0:露出 = 6000
SOURCE:0:屈従 = 1000
SOURCE:0:逸脱 = 1000

;縛って無理やり剃ると…
SIF TEQUIP:拘束 && TCVAR:やる気 <= 0
	SOURCE:0:逸脱 += 3000

SELECTCASE COND("陰毛")
CASE 3
	SOURCE:0:露出 += 4000
	SOURCE:0:屈従 += 1000
	SOURCE:0:逸脱 += 1000
CASE 2
	SOURCE:0:露出 += 6000
	SOURCE:0:屈従 += 1500
	SOURCE:0:逸脱 += 2000
ENDSELECT

;ABL:露出癖とマゾっ気をみる
SELECTCASE (ABL:露出癖 + 1)/2 + ABL:マゾっ気
CASE IS >= 9
	SOURCE:0:充足 += 5000
	TIMES SOURCE:0:屈従, 0.30
CASE IS >= 7
	SOURCE:0:充足 += 3000
	TIMES SOURCE:0:屈従, 0.60
CASE IS >= 5
	SOURCE:0:充足 += 1000
	TIMES SOURCE:0:屈従, 0.70
CASE IS >= 3

CASE 1
	TIMES SOURCE:0:屈従, 1.20
CASEELSE
	TIMES SOURCE:0:屈従, 1.50
ENDSELECT

;ビデオ撮影、室内露出、野外プレイは経験等にプラス
IF TEQUIP:ビデオカメラ
	TIMES SOURCE:0:露出, 1.50
	TIMES SOURCE:0:屈従, 1.50
	TIMES SOURCE:0:逸脱, 1.50
ENDIF
IF TEQUIP:室内露出プレイ || TEQUIP:野外プレイ
	TIMES SOURCE:0:露出, 1.50
	TIMES SOURCE:0:屈従, 1.50
	TIMES SOURCE:0:逸脱, 1.50
ENDIF

CALL CALC, "調教ソース", ARG


@TRAIN_MESSAGE_COM145
