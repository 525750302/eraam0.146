CASEELSE
	IF PENIS(TARGET)
		NAME_BUSH = 陰毛
	ELSE
		NAME_BUSH = アソコの毛
	ENDIF
ENDSELECT
IF PREVCOM == 13
	PRINTFORM %CALLNAME:PLAYER%に向けて大事な所を押し開いて\@ CHECK("陰毛管理") ? 待ち構え # 見せ \@ている
;緊縛中
ELSEIF GETBIT(TEQUIP:拘束, 21)
	PRINTFORM 大きく股を開いた格好で
	IF BIND("縄", TEQUIP:拘束)
		PRINT 縛られている
	ELSE
		PRINT 拘束されている
	ENDIF
